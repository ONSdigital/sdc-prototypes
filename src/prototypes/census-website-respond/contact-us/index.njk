{% block pageContent %}
   
    {% block main %}

        <div class="page__container container">

            {{
                onsBreadcrumb({
                    "ariaLabel": 'Breadcrumb',
                    "itemsList": [
                        {
                            "url": pageInfo.rootPath + '/home',
                            "text": 'Home'
                        }
                    ]
                })
            }}

            <div class="grid">

                <div class="grid__col col-7@m">

                    <main class="page__main" id="main-content" role="main">

                        <h1 class="u-mb-l u-fs-xxl">Contact us</h1>

                            <div class="page__body">

                            <h2>Census Quality Survey (CQS)</h2>
                            
                            <p>If you have any questions, or you’d like to arrange a convenient time to complete the CQS, please call us free on 0800 085 7376.</p>
                            
                            <h2>Questions about the census</h2>
                            
                            <p>Contact us if you have any questions about the census.</p>
                            
                            <h2>Telephone</h2>
                            
                            <p>+44 (0)1329 444972</p>
                            
                            <p>Our team is available to help you:</p>
                            
                            <p>Monday to Friday – 9am to 4pm</p>
                            
                            <h2>Email</h2>
                            
                            <p><a href="mailto:census.customerservices@ons.gov.uk">census.customerservices@ons.gov.uk</a></p>
                            
                            <h2>Social media</h2>
                            
                            <p>Follow us:</p>

                            {{
                                onsList({
                                    "classes": 'list--bare list--inline',
                                    "itemsList": [
                                        {
                                            "url": 'https://www.twitter.com/census2021',
                                            "text": 'Twitter',
                                            "prefixIcon": 'twitter',
                                            "iconSize": 'xxl',
                                            "rel": 'noreferrer external'
                                        },
                                        {
                                            "url": 'https://www.facebook.com/census2021',
                                            "text": 'Facebook',
                                            "prefixIcon": 'facebook',
                                            "iconSize": 'xxl',
                                            "rel": 'noreferrer external'
                                        },
                                        {
                                            "url": 'https://www.instagram.com/census2021',
