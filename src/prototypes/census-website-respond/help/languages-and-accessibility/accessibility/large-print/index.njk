{% block pageContent %}
   
    {% block main %}

        <div class="page__container container">

            {{
                onsBreadcrumb({
                    "ariaLabel": 'Breadcrumb',
                    "itemsList": [
                        {
                            "url": 'https://deploy-preview-157--census-website-respond.netlify.app/end-to-end/home/',
                            "text": 'Home'
                        },
                        {
                            "url": pageInfo.rootPath + '/help',
                            "text": 'Help with the census'
                        },
                        {
                            "url": pageInfo.rootPath + '/help/languages-and-accessibility',
                            "text": 'Languages and accessibility'
                        },
                        {
                            "url": pageInfo.rootPath + '/help/languages-and-accessibility/accessibility',
                            "text": 'Accessibility'
                        }
                    ]
                })
            }}

            <div class="grid">

                <div class="grid__col col-7@m">

                    <main class="page__main" id="main-content" role="main">

                        <h1 class="u-mb-l u-fs-xxl">Large print</h1>

                        <p>You can <a href="https://eqendtoend.netlify.app/end-to-end/uac-request-address/?previous=home&current-journey=new-hh-paper">request a large-print questionnaire</a> to be sent in the post. Select “I need a large-print questionnaire” when asked.</p>

                        <div class="u-mt-l u-mb-l">
                            {{ onsDownloads({
                                "downloads": [
                                    {
                                        "placeholderURL": cdnURL,
                                        "url": '#0',
                                        "title": 'Information leaflet (English)',
                                        "type": 'Leaflet',
                                        "meta": {
                                            "fileType": 'PDF',
                                            "fileSize": '13KB',
                                            "filePages": '2 pages'
                                        },
                                        "excerpt": 'Large-print information about the census.'
                                    },
                                    {
                                        "placeholderURL": cdnURL,
                                        "url": '#0',
                                        "title": 'Information leaflet (Welsh)',
                                        "type": 'Leaflet',
                                        "meta": {
                                            "fileType": 'PDF',
                                            "fileSize": '13KB',
                                            "filePages": '2 pages'
                                        },
                                        "excerpt": 'Large-print information about the census.'
                                    }
                                ]
                            }) }}
                        </div>

                        <p>You can also <a href="{{pageInfo.rootPath}}/contact-us">contact us</a> to request a paper census questionnaire or information leaflet to be sent in the post.</p>

                    </main>

                </div>

                <div class="grid__col col-4@m push-1@m u-mt-m">

                    {{-
                        onsRelatedLinks({
                            "id": 'related-links',
                            "title": 'Related content',
                            "itemsList": [                
                                {
                                    "url": pageInfo.rootPath + '/help/find-a-support-centre',
                                    "text": 'Find a support centre'
                                },
                                {
                                    "url": '#0',
                                    "text": 'Languages'
                                },
                                {
                                    "url": pageInfo.rootPath + '/contact-us',
                                    "text": 'Contact us'
                                }
                            ]
                        })
                    }}

                </div>

            </div>

        </div>
    
    {% endblock %}

{% endblock %}
