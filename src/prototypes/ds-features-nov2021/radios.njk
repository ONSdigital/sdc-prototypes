{% from "components/question/_macro.njk" import onsQuestion %}
{% from "components/fieldset/_macro.njk" import onsFieldset %}
{% from "components/input/_macro.njk" import onsInput %}
{% from "components/button/_macro.njk" import onsButton %}
{% from "components/radios/_macro.njk" import onsRadios %}

{% set questionTitle = "Do you have a passport?" %}
{% set prevPage = "duration" %}
{% set form =  {
    "method": "GET",
    "attributes": {
        "action":  "#"
    }
} %}

{% block main %}
    {% call onsQuestion({
        "title": questionTitle,
        "legendIsQuestionTitle": true
    }) %}

    {{
        onsRadios({
            "name": "passport",
            "dontWrap": true,
            "radios": [
                {
                    "id": "yes",
                    "classes": "ons-u-fl",
                    "label": {
                        "text": "Yes"
                    },
                    "value": "yes",
                    "attributes": {
                        "data-action-url": pageInfo.rootPath + "/autosuggest-countries.html"
                    }
                },
                {
                    "id": "no",
                    "label": {
                        "text": "No"
                    },
                    "value": "no",
                    "attributes": {
                        "data-action-url": pageInfo.rootPath + "/mutually-exclusive.html"
                    }
                }
            ]
        })
    }}

    {% endcall %}

    {{ onsButton({
        "text": "Save and continue",
        "classes": "ons-u-mt-xl"
    }) }}

{% endblock %}
