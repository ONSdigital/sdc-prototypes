{% endblock %}

{% set pageConfig = { 
    'cdn': {
        'version': '30.0.0'
    },
    "title": "Survey data collection",
    "header": {
        "logoAlt": "ONS",
        "logoHref": "#0"
    },
    "serviceLinks": {
        "classes": "header-service-nav--internal u-mr-s",
        "ariaLabel": "Site services menu",
        "ariaListLabel": "Navigation menu",
