{% extends "prototypes/rh-census/views/_master.njk" %}
{% from "components/uac/_macro.njk" import onsUACInput %}
{% from "components/button/_macro.njk" import onsButton %}

{% set form =  {
    "method": "GET",
    "attributes": {
        "action": action
    }
} %}

{% block main %}
    <h1 class="u-mt-l">Start survey</h1>

    {{ onsUACInput({
        "id": "uac",
        "name": "uac",
        "label": {
            "text": "Enter the 16 character code printed on the letter",
            "description": "Keep this code safe and only share it with others in your household"
        }
    }) }}

    <p class="u-mt-m"><span class="icon--lock"></span>Your personal information is <a href="https://blacklodge.census-gcp.onsdigital.uk/privacy-and-data-protection/">protected by law</a> and will be kept confidential.</p>

    {{ onsButton({
        "text": "Access survey",
        "classes": "u-mb-xl"
    }) }}

    <h2 class="u-fs-r--b u-mb-no">Don't have a code?</h2>
    <p>
        You can <a href="{{ pageInfo.rootPath }}/{{ requestNewCodeLink }}">get a new code</a> to start a new survey if you have lost, forgotten or not received an access code.
    </p>
{% endblock %}
