---
title: Enter your postcode
group: Census
version: 9.1.0
layout: rh-census/views/_master
---
{% from "components/question/_macro.njk" import onsQuestion %}
{% from "components/button/_macro.njk" import onsButton %}
{% from "components/input/_macro.njk" import onsInput %}

{% set form =  {
    "method": "GET",
    "attributes": {
        "action": "/prototypes/rh-census/select-address.html"
    }
} %}

{% block main %}
    <a class="previous-link js-previous" href="{{ pageInfo.rootPath }}/confirm-address.html">Previous</a>
    {% call onsQuestion({
        "title": "Enter your postcode",
        "description": "<p>We ask for this to check if your address is eligible for the census.</p>",
        "useFieldset": true
    }) %}

    {% from "components/input/_macro.njk" import onsInput %}
    {{ 
        onsInput({
            "id": "postcode",
            "type": "postcode",
            "autocomplete": "postcode",
            "classes": "input--w-5",
            "label": {
                "text": "Enter postcode"
            }
        }) 
    }}
    
    {% endcall %}
    
    {{
        onsButton({
            "text": "Find address",
            "classes": "u-mt-l"
        })
    }}
    
{% endblock %}
