{% block main %}

  <div class="grid grid--flex grid--between">
    <div class="grid__col col-9@m">
      {% from "components/breadcrumb/_macro.njk" import onsBreadcrumb %}
      {{ 
          onsBreadcrumb({
              "ariaLabel": 'Breadcrumb',
              "itemsList": [
                  {
                      "url": '/',
                      "text": 'Home'
                  },
                  {
                      "url": '/',
                      "text": 'FDI Messages',
                      "current": true
                  }
              ]
          }) 
      }}
      <h1 class="filtered">FDI Messages</h1>
      <p id="clear" class="clear hidden">Filtered by RU ref: 111100007656. <a href="{{ pageInfo.rootPath }}/index.html">Clear filter</a></p>
    </div>

    <div class="grid__col col-3@m">
      <form class="filter" action="{{ pageInfo.rootPath }}/no-result.html">
        <label class="label" for="filter">Filter RU ref</label>
        <div class="grid--flex input-group">
          <div class="input-field">
            <p class="field">
              <input type="text" id="filter" class="input input--text input-type__input input--w-6 number" value="11110000243" pattern="[0-9]*" inputmode="numeric" autocomplete="off" min/>
            </p>
          </div>
          <div class="filter-button">
            <button type="submit" id="length" class="btn btn--small btn--disabled" disabled="true">
              <span class="btn__inner">Filter</span>
            </button>
          </div>
        </div>
        <p id="toofew" class="error hidden">Too few characters</p>
        <p id="toomany" class="error hidden">Too many characters</p>
      </form>
    </div>
  </div>
         

  <div class="grid">
    <div class="grid__col col-12@m">
      <nav class="section-nav" id="" aria-label="Section menu">
        <ul class="section-nav__list" aria-label="">
          <li class="section-nav__item">
            <a href="" class="section-nav__link">My Messages (1)</a>
          </li>
          <li class="section-nav__item">
            <a href="" class="section-nav__link">Open (4)</a>
          </li>
          <li class="section-nav__item section-nav__item--active">
            <a href="" class="section-nav__link">Closed (3)</a>
          </li>
          <li class="section-nav__item">
            <a href="" class="section-nav__link">Initial (0)</a>
          </li>
        </ul>
      </nav>

      <table class="table table--dense">
        <caption class="table__caption">Secure messages</caption>
        <thead class="table__head">
          <tr class="table__row">
            <th scope="col" class="table__header ru-ref number">RU Ref</th>
            <th scope="col" class="table__header business-name">Business name</th>
            <th scope="col" class="table__header subject">Subject</th>
            <th scope="col" class="table__header from">From</th>
            <th scope="col" class="table__header to">To</th>
            <th scope="col" class="table__header date-and-time">Date and time</th>
          </tr>
        </thead>
        <tbody class="table__body">
          <tr class="table__row">
            <td class="table__cell ru-ref number" scope="row">
              <span class="">11110020831</span></td>
            <td class="table__cell">Impax Value Manageme...</td>
            <td class="table__cell message-list__subject">
              <a href="/messages/view.html">RW - Q3 Outward Foreign Direct Investment Survey - IMPAX VALUE MANAGEMENT GROUP</a>
            </td>
            <td class="table__cell">Dave Cleere</td>
            <td class="table__cell">Rhodri Williams</td>
            <td class="table__cell date-time">29 Dec 2017 11:42</td>
          </tr>
          <tr class="table__row">
            <td class="table__cell ru-ref number" class="message-list__item--unread" scope="row">
              <span class="">11110020831</span></td>
            <td class="table__cell">Impax Value Manageme...</td>
            <td class="table__cell message-list__subject">
              <a href="/messages/view.html">RW - Q3 Outward Foreign Direct Investment Survey - IMPAX VALUE MANAGEMENT GROUP</a>
            </td>
            <td class="table__cell">Rhodri Williams</td>
            <td class="table__cell">Dave Cleere</td>
            <td class="table__cell date-time">29 Dec 2017 11:42</td>
          </tr>
          <tr class="table__row">
            <td class="table__cell ru-ref number" scope="row">
              <span class="">11110020831</span></td>
            <td class="table__cell">Impax Value Manageme...</td>
            <td class="table__cell message-list__subject">
              <a href="/messages/view.html">RW - Q3 Outward Foreign Direct Investment Survey - IMPAX VALUE MANAGEMENT GROUP</a>
            </td>
            <td class="table__cell">Rhodri Williams</td>
            <td class="table__cell">Dave Cleere</td>
            <td class="table__cell date-time">29 Dec 2017 11:42</td>
          </tr>
        </tbody>
      </table>

    </div>
    <!-- grid__col col-12@m -->
  </div>

  <div id="live" class="u-vh" aria-live="polite"></div>

  <script>
    var myInput = document.getElementById("filter");
    var length = document.getElementById("length");
    var filter = document.getElementById("filter");
    var toofew = document.getElementById("toofew");
    var toomany = document.getElementById("toomany");
    var clear = document.getElementById("clear");

    // When the user starts to type something inside the password field
    myInput.onkeyup = function () {

      // Validate length
      if (myInput.value.length == 11) {
        length
          .classList
          .remove("btn--disabled");
        length
          .classList
          .add("valid");
        length.removeAttribute("disabled", "");
      } else {
        length
          .classList
          .remove("valid");
        length
          .classList
          .add("btn--disabled");
        length.setAttribute("disabled", "");
      }

      // More than 11 characters
      if (myInput.value.length == 0) {
        toofew
          .classList
          .add("null");
        toomany
          .classList
          .add("null");
      } else {
        toofew
          .classList
          .remove("null");
        toomany
          .classList
          .remove("null");
      }

      // Fewer than 11 characters
      if (myInput.value.length <= 10) {
        toofew
          .classList
          .remove("hidden");
      } else {
        toofew
          .classList
          .add("hidden");
      }

      // More than 11 characters
      if (myInput.value.length >= 12) {
        toomany
          .classList
          .remove("hidden");
      } else {
        toomany
          .classList
          .add("hidden");
      }
    }
  </script>

{% endblock %}
