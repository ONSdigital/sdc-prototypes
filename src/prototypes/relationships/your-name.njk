---
title: Relationships
group: Components
version: 7.0.1
layout: relationships/views/_master
---
{% from "components/question/_macro.njk" import onsQuestion %}
{% from "components/button/_macro.njk" import onsButton %}
{% from "components/input/_macro.njk" import onsInput %}

{% set form =  {
    "method": "GET",
    "attributes": {
        "action": pageInfo.rootPath + "/does-anyone-else-live-here.html"
    }
} %}

{% block main %}
    <a href="{{ pageInfo.rootPath }}">Previous</a>
    {% call onsQuestion({
        "title": "What is your name?",
        "useFieldset": true,
        "classes": "js-person",
        "attributes": {
            "data-you": true
        }
    }) %}
        {{ onsInput({
            "id": "first-name",
            "label": {
                "text": "First name"
            }
        }) }}

        {{ onsInput({
            "id": "middle-name",
            "label": {
                "text": "Middle name(s)"
            }
        }) }}

        {{ onsInput({
            "id": "last-name",
            "label": {
                "text": "Last name"
            }
        }) }}
    {% endcall %}

    {{ onsButton({
        "text": "Continue",
        "classes": "u-mt-m u-mb-xl"
    }) }}
{% endblock %}
