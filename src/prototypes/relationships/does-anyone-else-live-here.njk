---
title: Relationships
group: Components
version: 7.0.1
layout: relationships/views/_master
---
{% from "components/question/_macro.njk" import onsQuestion %}
{% from "components/button/_macro.njk" import onsButton %}
{% from "components/radios/_macro.njk" import onsRadios %}

{% set form =  {
    "method": "GET",
    "attributes": {
        "action":  pageInfo.rootPath + "/relationships-intro.html"
    }
} %}

{% block main %}
    <a href="{{ pageInfo.rootPath }}/your-name.html">Previous</a>
    {% call onsQuestion({
        "title": "Does anyone else live at 2 Example Address?",
        "useFieldset": true
    }) %}
        <div class="js-people-list"></div>

        {{ onsRadios({
            "noField": true,
            "id": "does-anyone-else-live-here",
            "name": "does-anyone-else-live-here",
            "classes": "js-people-check",
            "radios": [
                {
                    "id": "yes",
                    "label": {
                        "text": "Yes, I need to add a second person",
                        "description": "Include partners, children, babies born on or before 3 February 2019, housemates, tenants and lodgers, students and schoolchildren who live away from home during term time, where this is their permanent or family home",
                        "classes": "js-another-person"
                    },
                    "attributes": {
                        "data-action": pageInfo.rootPath + "/who-else.html"
                    }
                },
                {
                    "id": "no",
                    "label": {
                        "text": "No, I do not need to add anyone"
                    }
                }
            ]
        }) }}
    {% endcall %}

    {{ onsButton({
        "text": "Continue",
        "classes": "u-mt-m u-mb-xl"
    }) }}
{% endblock %}
