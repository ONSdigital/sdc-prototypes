---
group: RAS/RM
title: Alert banner management
version: 17.0.0
layout: alert-banner-management/views/version-2/_master
---

{% from "components/breadcrumb/_macro.njk" import onsBreadcrumb %}
{% from "components/textarea/_macro.njk" import onsTextarea %}
{% from "components/radios/_macro.njk" import onsRadios %}
{% from "components/button/_macro.njk" import onsButton %}
{% from "components/date-input/_macro.njk" import onsDateInput %}

{% block main %}

    <div class="grid">
        <div class="grid__col col-12@m u-pt-no u-pb-no">
            {{ 
                onsBreadcrumb({
                    "ariaLabel": 'Breadcrumb',
                    "itemsList": [
                        {
                            "url": '',
                            "text": 'Surveys'
                        },
                        {
                            "url": '/',
                            "text": 'Create an alert',
                            "current": true
                        }
                    ]
                }) 
            }}
        </div>
        <div class="grid__col col-8@m u-pt-no">
            <form action="{{ pageInfo.parentPath }}/index.html">
                <h1>Specify date and time</h1>
                <div class="field" style="display:flex">
                    <fieldset id="date" class="fieldset">
                        <legend class="fieldset__legend">Publish alert
                            <br>
                            <span class="fieldset__description">For example, 31 3 2020 at 23:59</span>
                        </legend>
                        <div class="field-group">
                            <div class="field u-mb-s">
                            <label class="label  " for="date-day">Day</label>
                            <input type="text" id="date-day" class="input input--text input-type__input   input--w-2" name="day" min="1" max="31" maxlength="2" pattern="[0-9]*" inputmode="numeric" autocomplete="bday-day" />
                            </div>
                            <div class="field u-mb-s">
                            <label class="label  " for="date-month">Month</label>
                            <input type="text" id="date-month" class="input input--text input-type__input   input--w-2" name="month" min="1" max="12" maxlength="2" pattern="[0-9]*" inputmode="numeric" autocomplete="bday-month" />
                            </div>
                            <div class="field u-mb-s">
                            <label class="label  " for="date-year">Year</label>
                            <input type="text" id="date-year" class="input input--text input-type__input   input--w-4" name="year" min="1000" max="3000" maxlength="4" pattern="[0-9]*" inputmode="numeric" autocomplete="bday-year" />
                            </div>
                            <div class="field u-mb-s">
                            <p class="u-mt-l">at</p>
                            </div>
                            <div class="field u-mb-s">
                            <label class="label  " for="date-year">Hrs</label>
                            <input type="text" id="date-year" class="input input--text input-type__input   input--w-2" name="year" min="1000" max="3000" maxlength="4" pattern="[0-9]*" inputmode="numeric" autocomplete="bday-year" />
                            </div>
                            <div class="field u-mb-s">
                            <label class="label  " for="date-year">Mins</label>
                            <input type="text" id="date-year" class="input input--text input-type__input   input--w-2" name="year" min="1000" max="3000" maxlength="4" pattern="[0-9]*" inputmode="numeric" autocomplete="bday-year" />
                            </div>
                        </div>
                    </fieldset>
                </div>
                <div class="field u-mt-l" style="display:flex">
                    <fieldset id="date" class="fieldset">
                        <legend class="fieldset__legend">Remove alert
                            <br>
                            <span class="fieldset__description">For example, 31 3 2020 at 23:59</span>
                        </legend>
                        <div class="field-group">
                            <div class="field u-mb-s">
                            <label class="label  " for="date-day">Day</label>
                            <input type="text" id="date-day" class="input input--text input-type__input   input--w-2" name="day" min="1" max="31" maxlength="2" pattern="[0-9]*" inputmode="numeric" autocomplete="bday-day" />
                            </div>
                            <div class="field u-mb-s">
                            <label class="label  " for="date-month">Month</label>
                            <input type="text" id="date-month" class="input input--text input-type__input   input--w-2" name="month" min="1" max="12" maxlength="2" pattern="[0-9]*" inputmode="numeric" autocomplete="bday-month" />
                            </div>
                            <div class="field u-mb-s">
                            <label class="label  " for="date-year">Year</label>
                            <input type="text" id="date-year" class="input input--text input-type__input   input--w-4" name="year" min="1000" max="3000" maxlength="4" pattern="[0-9]*" inputmode="numeric" autocomplete="bday-year" />
                            </div>
                            <div class="field u-mb-s">
                            <p class="u-mt-l">at</p>
                            </div>
                            <div class="field u-mb-s">
                            <label class="label  " for="date-year">Hrs</label>
                            <input type="text" id="date-year" class="input input--text input-type__input   input--w-2" name="year" min="1000" max="3000" maxlength="4" pattern="[0-9]*" inputmode="numeric" autocomplete="bday-year" />
                            </div>
                            <div class="field u-mb-s">
                            <label class="label  " for="date-year">Mins</label>
                            <input type="text" id="date-year" class="input input--text input-type__input   input--w-2" name="year" min="1000" max="3000" maxlength="4" pattern="[0-9]*" inputmode="numeric" autocomplete="bday-year" />
                            </div>
                        </div>
                    </fieldset>
                </div>
                <p class="field u-mt-l">
                    {{ 
                        onsButton({
                            "type": 'button',
                            "text": 'Continue',
                            "url": "/prototypes/alert-banner-management/version-2/specific/preview.html"
                        }) 
                    }}
                    {{ 
                        onsButton({
                            "type": 'button',
                            "text": 'Cancel',
                            "classes": 'btn--secondary btn-group__btn',
                            "url": "/prototypes/alert-banner-management/version-2/00-create-alert.html"
                        }) 
                    }}
                </p>
            </form>
        </div>
    </div>

{% endblock %}
