---
group: ROps
version: 20.0.3
title: Alert banner management
layout: alert-banner-management/views/version-4/_master
---

{% from "components/breadcrumb/_macro.njk" import onsBreadcrumb %}
{% from "components/textarea/_macro.njk" import onsTextarea %}
{% from "components/radios/_macro.njk" import onsRadios %}
{% from "components/button/_macro.njk" import onsButton %}

{% block main %}

    <div class="grid">
        <div class="grid__col col-12@m u-pt-no u-pb-no">
            {{ 
                onsBreadcrumb({
                    "ariaLabel": 'Breadcrumb',
                    "itemsList": [
                        {
                            "url": '/prototypes/alert-banner-management/version-4/survey-list.html',
                            "text": 'Surveys'
                        },
                        {
                            "url": '/',
                            "text": 'Create an alert',
                            "current": true
                        }
                    ]
                }) 
            }}
        </div>
        <div class="grid__col col-8@m u-pt-no">
            <h1>Create a new alert</h1>
            <form action="{{ pageInfo.parentPath }}/index.html">
                <fieldset name="Group1">
                    <p class="field">
                        <a href="{{ pageInfo.parentPath }}/00-view-message-templates.html">View message templates</a>
                    </p>
                    <p class="field">
                        <a href="{{ pageInfo.parentPath }}/01-manage-alert-templates.html">Manage message templates</a>
                    </p>
                    <p class="field">
                        {{
                        onsTextarea({
                            "id": "templatemessage",
                            "name": "templatemessage",
                            "classes": "input--w-30",
                            "label": {
                                "text": "Message"
                            },
                            "maxlength": 400,
                            "charCountSingular": "You have {x} character remaining",
                            "charCountPlural": "You have {x} characters remaining"
                        })
                    }}
                    </p>
                </fieldset>
            </form>

            <p class="field">
                {{ 
                        onsButton({
                            "type": 'button',
                            "text": 'Continue',
                            "url": "/prototypes/alert-banner-management/version-4/03-schedule-alert.html"
                        }) 
                    }}
                {{ 
                        onsButton({
                            "type": 'button',
                            "text": 'Cancel',
                            "classes": 'btn--secondary btn-group__btn',
                            "url": "/prototypes/alert-banner-management/version-4/survey-list.html"
                        }) 
                    }}
            </p>
        </div>
    </div>
{% endblock %}
