group: Frontstage
title: SM Categorisation
version: 17.0.0
layout: SM-categorisation/views/version-3/_master-survey
---

{% from "components/input/_macro.njk" import onsInput %}
{% from "components/breadcrumb/_macro.njk" import onsBreadcrumb %}

{% block main %}

    <div class="grid">
        <div id="main" class="grid__col col-12@m u-pt-no u-pb-no">
            {{ 
                onsBreadcrumb({
                    "ariaLabel": 'Breadcrumb',
                    "itemsList": [
                        {
                            "url": '/prototypes/SM-categorisation/version-3/00-surveys-list.html',
                            "text": 'Surveys'
                        },
                        {
                            "url": '/prototypes/SM-categorisation/version-3/account/30-my-account.html',
                            "text": 'Account'
                        },
                        {
                            "url": '/',
                            "text": 'Change your account details',
                            "current": true
                        }
                    ]
                }) 
            }}
        </div>
        <div class="grid__col col-8@m u-pt-no">
            <h1>Change your account details</h1>
            <p><a href="{{ pageInfo.rootPath }}/version-3/account/01-change-account-details/02-change-email-address.html">Change your email address</a></p>
            <!--
            <p>You'll need to:</p>
            <ol>
                <li>Provide the email address</li>
                <li>Send the enrolment code</li>
            </ol>
            -->

            <!-- <p>To whom would you like to transfer your surveys?</p> -->

            <div class="field">
                <p>
                    {{ 
                        onsInput({
                            "id": "firstname",
                            "label": {
                                "text": "First name"
                            }
                        }) 
                    }}
                </p>
            </div>

            <div class="field">
                <p>
                    {{ 
                        onsInput({
                            "id": "Surname",
                            "label": {
                                "text": "Surname"
                            }
                        }) 
                    }}
                </p>
            </div>

            <div class="field">
                <p>
                    {{ 
                        onsInput({
                            "id": "phonenumber",
                            "label": {
                                "text": "Phone number"
                            }
                        }) 
                    }}
                </p>
            </div>

            <p class="field">
                <button type="submit" class="btn" onclick="location.href='{{ pageInfo.rootPath }}/version-3/account/30-my-account.html';">
                    <span class="btn__inner">Save</span>
                </button>
                <button type="submit" class="btn btn--secondary" onclick="location.href='{{ pageInfo.rootPath }}/version-3/account/30-my-account.html';">
                    <span class="btn__inner">Cancel</span>
                </button>
            </p>
        </div>
    </div>

{% endblock %}
