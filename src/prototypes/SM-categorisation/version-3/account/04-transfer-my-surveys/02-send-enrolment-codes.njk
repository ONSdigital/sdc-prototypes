{% from "components/input/_macro.njk" import onsInput %}
{% from "components/breadcrumb/_macro.njk" import onsBreadcrumb %}
{% from "components/checkboxes/_macro.njk" import onsCheckboxes %}

{% block main %}

    <div class="grid">
        <div id="main" class="grid__col col-12@m u-pt-no u-pb-no">
            {{ 
                onsBreadcrumb({
                    "ariaLabel": 'Breadcrumb',
                    "itemsList": [
                        {
                            "url": '/prototypes/SM-categorisation/version-3/00-surveys-list.html',
                            "text": 'Surveys'
                        },
                        {
                            "url": '/prototypes/SM-categorisation/version-3/30-my-account.html',
                            "text": 'Account'
                        },
                        {
                            "url": '/prototypes/SM-categorisation/version-3/account/04-transfer-my-surveys/index.html',
                            "text": 'Transfer surveys'
                        },
                        {
                            "url": '/',
                            "text": 'Send enrolment codes',
                            "current": true
                        }
                    ]
                }) 
            }}
        </div>
        <div class="grid__col col-8@m u-pt-no">
            <h1>Send enrolment codes</h1>

            <p><b>jane.doe@acme.com</b>, <b>joe.bloggs@acme.com</b> and <b>joe.bloggs@acme.com</b> will be enrolled onto the following surveys:</p>
            <h2 class="u-fs-m">ACME Consumer Products</h2>
            <div class="text-indent">
                <ul class="list list--bare">
                    <li>Quarterly Business Survey</li>
                    <li>Monthly Business Survey</li>
                </ul>
            </div> 
            <h2 class="u-fs-m">ACME Group Ltd</h2>
            <div class="text-indent">
                <ul class="list list--bare">
                    <li>Business Register and Employment Survey</li>
                    <li>Monthly Business Survey</li>
                    <li>Quarterly Business Survey</li>
                    <li>Monthly Wages and Salary Survey</li>
                    <li>Quarterly Acquisitions and Disposals of Capital Assets</li>
                </ul>
            </div>
            <h1>Delete account</h1>
            <p>If you no longer wish to hold an ONS account please tick below. This will take up to 24 hours and cannot be reversed.</p>
            <p class="field">
            {{
                onsCheckboxes({
                    "legend": "What are your favourite pizza toppings?",
                    "checkboxesLabel": "Select this checkbox to delete your account",
                    "name": "food",
                    "checkboxes": [
                        {
                            "id": "delete",
                            "label": {
                                "text": "Delete account"
                            },
                            "value": "delete"
                        }
                    ]
                })
            }}
            </p>
            <p class="field">
                <button type="submit" class="btn" onclick="location.href='{{ pageInfo.rootPath }}/version-3/account/04-transfer-my-surveys/03-confirmation.html';">
                    <span class="btn__inner">Send</span>
                </button>
                <button type="submit" class="btn btn--secondary" onclick="location.href='{{ pageInfo.rootPath }}/version-3/30-my-account.html';">
                    <span class="btn__inner">Cancel</span>
                </button>
            </p>
        </div>
    </div>

{% endblock %}
