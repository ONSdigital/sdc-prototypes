---
group: Frontstage
title: SM Categorisation
version: 17.0.0
layout: SM-categorisation/views/version-3/_master-survey
---

{% from "components/button/_macro.njk" import onsButton %}
{% from "components/radios/_macro.njk" import onsRadios %}
{% from "components/breadcrumb/_macro.njk" import onsBreadcrumb %}

{% block main %}
    <div class="grid">
        <div id="main" class="grid__col col-12@m u-pt-no u-pb-no">
            {{ 
                onsBreadcrumb({
                    "ariaLabel": 'Breadcrumb',
                    "itemsList": [
                        {
                            "url": '/prototypes/SM-categorisation/version-3/00-surveys-list.html',
                            "text": 'Surveys'
                        },
                        {
                            "url": '/prototypes/SM-categorisation/version-3/01-message-categories.html',
                            "text": 'Help'
                        },
                        {
                            "url": '/',
                            "text": 'Change who completes this survey',
                            "current": true
                        }
                    ]
                }) 
            }}
        </div>
        <div class="grid__col col-8@m u-pt-no">
            <h1>Change who completes this survey</h1>
            <form action="{{ pageInfo.parentPath }}/index.html">
                <p class="field">
                    <fieldset class="fieldset">
                        <legend class="fieldset__legend">Choose an option</legend>
                        <div class="radios__items">
                            <p class="radios__item">
                                <span class="radio">
                                    <input
                                        type="radio"
                                        id="answering-a-survey-question"
                                        data-action-url="/prototypes/SM-categorisation/version-3/account/03-share-access-to-my-surveys/index.html"
                                        class="radio__input js-radio"
                                        value="question-one"
                                        name="message-query">
                                    <label class="radio__label" for="answering-a-survey-question">Share access to my surveys</label>
                                </span>
                            </p>
                            <br>
                            <p class="radios__item">
                                <span class="radio">
                                    <input
                                        type="radio"
                                        id="information-about-the-survey"
                                        data-action-url="/prototypes/SM-categorisation/version-3/account/04-transfer-my-surveys/index.html"
                                        class="radio__input js-radio"
                                        value="question-two"
                                        name="message-query">
                                    <label class="radio__label" for="information-about-the-survey">I'm no longer responsible for completing surveys</label>
                                </span>
                            </p>
                            <br>
                            <p class="radios__item">
                                <span class="radio">
                                    <input
                                        type="radio"
                                        id="other-checkbox"
                                        data-action-url="{{ pageInfo.parentPath }}/10-create-message.html"
                                        class="radio__input js-radio "
                                        value="other" 
                                        name="message-query"
                                        aria-controls="other-checkbox-other-wrap" aria-haspopup="true">
                                        <label class="radio__label" for="other-checkbox">
                                            Something else
                                        </label>
                                </span>
                            </p>
                        </div>
                    </fieldset>
                </p>
                <p class="field">
                    <div class="btn-group">
                        <button type="submit" class="btn">
                            <span class="btn__inner">Continue</span>
                        </button>
                        {{ 
                            onsButton({
                                "type": 'button',
                                "text": 'Cancel',
                                "classes": 'btn--secondary btn-group__btn',
                                "url": "/prototypes/SM-categorisation/version-3/00-surveys-list.html"
                            }) 
                        }}
                    </div>
                </p>
            </form>
        </div>
    </div>
    <script>
        var submit = document.getElementById('btnFormSubmit');
        submit.addEventListener('click', submitForm);

        function submitForm(event) {
            event.preventDefault();
            event.stopPropagation();

            var href = '',
                inputs = this
                    .parentNode
                    .getElementsByTagName('input')
            for (var i = 0; i < inputs.length; i++) {
                if (inputs[i].getAttribute('name') == 'button' && inputs[i].checked) {
                    href = inputs[i].getAttribute('data-href');
                    window.location = href;
                }
            }
        }
    </script>

{% endblock %}
