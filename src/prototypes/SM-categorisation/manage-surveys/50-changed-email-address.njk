{% from "components/input/_macro.njk" import onsInput %}
{% from "components/breadcrumb/_macro.njk" import onsBreadcrumb %}

{% block main %}
    <div class="grid">
        <div id="main" class="grid__col col-8@m u-pt-no">
            {{ 
                onsBreadcrumb({
                    "ariaLabel": 'Breadcrumb',
                    "itemsList": [
                        {
                            "url": '/',
                            "text": 'Home'
                        },
                        {
                            "url": '/',
                            "text": 'Monthly Business Survey help'
                        },
                        {
                            "url": '/',
                            "text": 'Details have changed'
                        },
                        {
                            "url": '/',
                            "text": 'Transfer surveys',
                            "current": true
                        }
                    ]
                }) 
            }}
            <h1>Transfer your surveys</h1>


            <!--
            <p>You'll need to:</p>
            <ol>
                <li>Provide the email address</li>
                <li>Send the enrolment code</li>
            </ol>
            -->

            <!-- <p>To whom would you like to transfer your surveys?</p> -->

            <div class="field">
                <p>
                    {{ 
                        onsInput({
                            "id": "recipient-one",
                            "class": "hello",
                            "label": {
                                "text": "What's your new email address?"
                            }
                        }) 
                    }}
                </p>
            </div>

        
            <p class="field">
                <button type="submit" class="btn" onclick="location.href='{{ pageInfo.rootPath }}/manage-surveys/51-send-enrolment-codes.html';">
                    <span class="btn__inner">Continue</span>
                </button>
            </p>
            <p class="field">
                <a href="{{ pageInfo.rootPath }}/manage-surveys/20-my-account.html">Cancel</a>
            </p>
        </div>
    </div>

{% endblock %}
