---
group: Frontstage
title: SM Categorisation
version: 17.0.0
layout: SM-categorisation/views/_master
---

{% from "components/button/_macro.njk" import onsButton %}

{% block main %}
    <div class="grid">
        <div id="main" class="grid__col col-12@m">
            <h1>How may we help you?</h1>
            <form action="{{ pageInfo.parentPath }}/index.html">
                <p class="field">
                    <fieldset class="fieldset">
                        <legend class="fieldset__legend">Choose an option</legend>
                        <div class="radios__items">
                            <p class="radios__item">
                                <span class="radio">
                                    <input
                                    type="radio"
                                    id="answering-a-survey-question"
                                    data-action-url="{{ pageInfo.parentPath }}/10-category/00-send-message.html"
                                    class="radio__input js-radio"
                                    value="question-one"
                                    name="message-query">
                                    <label class="radio__label" for="answering-a-survey-question">Answering a survey question</label>
                                </span>
                            </p>
                            <br>
                            <p class="radios__item">
                                <span class="radio">
                                    <input
                                    type="radio"
                                    id="information-about-the-survey"
                                    data-action-url="{{ pageInfo.parentPath }}/20-category/00-category-list.html"
                                    class="radio__input js-radio"
                                    value="question-two"
                                    name="message-query">
                                    <label class="radio__label" for="information-about-the-survey">Information about the survey</label>
                                </span>
                            </p>
                            <br>
                            <p class="radios__item">
                                <span class="radio">
                                    <input
                                    type="radio"
                                    id="my-company-details-have-changed"
                                    data-action-url="{{ pageInfo.parentPath }}/30-category/00-send-message.html"
                                    class="radio__input js-radio"
                                    value="question--three"
                                    name="message-query">
                                    <label class="radio__label" for="my-company-details-have-changed">My company details</label>
                                </span>
                            </p>
                            <br>
                            <p class="radios__item">
                                <span class="radio">
                                    <input
                                    type="radio"
                                    id="my-contact-details-have-changed"
                                    data-action-url="{{ pageInfo.parentPath }}/40-category/00-send-message.html"
                                    class="radio__input js-radio"
                                    value="question--four"
                                    name="message-query">
                                    <label class="radio__label" for="my-contact-details-have-changed">My contact details</label>
                                </span>
                            </p>
                            <br>
                            <p class="radios__item">
                                <span class="radio">
                                    <input
                                    type="radio"
                                    id="a-technical-issue"
                                    data-action-url="{{ pageInfo.parentPath }}/50-category/00-send-message.html"
                                    class="radio__input js-radio"
                                    value="question-five"
                                    name="message-query">
                                    <label class="radio__label" for="a-technical-issue">A technical issue</label>
                                </span>
                            </p>
                            <br>
                            <p class="radios__item">
                                <span class="radio">
                                    <input
                                        type="radio"
                                        id="other-checkbox"
                                        data-action-url="{{ pageInfo.parentPath }}/60-category/00-send-message.html"
                                        class="radio__input js-radio "
                                        value="other" 
                                        name="message-query"
                                        aria-controls="other-checkbox-other-wrap" aria-haspopup="true">
                                        <label class="radio__label" for="other-checkbox">
                                            Something else
                                        </label>
                                        <span class="radio__other" id="other-checkbox-other-wrap">
                                            <label class="label u-fs-s--b" for="other-textbox">
                                                Please specify
                                            </label>
                                        <input
                                            type="text"
                                            id="other-textbox"
                                            class="input input--text input-type__input  input--w-auto "
                                            name="other-answer"/>
                                    </span>
                                </span>
                            </p>
                        </div>
                    </fieldset>
                </p>
                <p class="field">
                    <div class="btn-group">
                        <button type="submit" class="btn">
                            <span class="btn__inner">Continue</span>
                        </button>
                        {{ 
                            onsButton({
                                "type": 'button',
                                "text": 'Cancel',
                                "classes": 'btn--secondary btn-group__btn',
                                "url": "/prototypes/SM-categorisation/version-1/00-surveys-list.html"
                            }) 
                        }}
                    </div>
                </p>
            </form>
        </div>
    </div>

{% endblock %}
