---
group: Frontstage
title: SM Templates
version: 17.0.0
layout: SM-categorisation/views/_master
---

{% from "components/radios/_macro.njk" import onsRadios %}
{% from "components/button/_macro.njk" import onsButton %}
{% from "components/breadcrumb/_macro.njk" import onsBreadcrumb %}

{% block main %}

    <div class="grid">
        <div id="main" class="grid__col col-12@m u-pt-no u-pb-no">
            {{ 
                onsBreadcrumb({
                    "ariaLabel": 'Breadcrumb',
                    "itemsList": [
                        {
                            "url": '/prototypes/SM-categorisation/version-1/00-surveys-list.html',
                            "text": 'Surveys'
                        },
                        {
                            "url": '/prototypes/SM-categorisation/version-1/01-message-categories.html',
                            "text": 'Help'
                        },
                        {
                            "url": '/',
                            "text": 'Manage access to surveys',
                            "current": true
                        }
                    ]
                }) 
            }}
        </div>
        <div class="grid__col col-8@m u-pt-no">
            <h1>Manage access to my surveys</h1>
            <form>
                <p>
                    <fieldset class="fieldset">
                        <legend class="fieldset__legend">Choose an option</legend>
                        <div class="radios__items">
                            <p class="radios__item">
                                <span class="radio">
                                    <input
                                        type="radio"
                                        id="access-to-my-surveys"
                                        data-action-url="{{ pageInfo.parentPath }}/30-add-new-account.html"
                                        class="radio__input js-radio"
                                        value="question-one"
                                        name="message-query">
                                    <label class="radio__label" for="access-to-my-surveys">I need to share access to my surveys</label>
                                </span>
                            </p>
                            <br>
                            <p class="radios__item">
                                <span class="radio">
                                    <input
                                        type="radio"
                                        id="no-longer-responsible"
                                        data-action-url="{{ pageInfo.parentPath }}/40-transfer-account.html"
                                        class="radio__input js-radio"
                                        value="question-two"
                                        name="message-query">
                                    <label class="radio__label" for="no-longer-responsible">I'm no longer responsible for completing surveys</label>
                                </span>
                            </p>
                        </div>
                    </fieldset>
                </p>
                <p class="field">
                    {% from "components/button/_macro.njk" import onsButton %}
                    {{ 
                            onsButton({
                                "text": 'Continue'
                            }) 
                        }}
                </p>
            </form>
        </div>
    </div>

{% endblock %}
