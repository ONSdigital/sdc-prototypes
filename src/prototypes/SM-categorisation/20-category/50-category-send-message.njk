---
group: Frontstage
title: SM Categorisation
version: 14.4.0
layout: SM-categorisation/views/_master-messages
---

{% from "components/button/_macro.njk" import onsButton %}
{% from "components/radios/_macro.njk" import onsRadios %}
{% from "components/textarea/_macro.njk" import onsTextarea %}
{% from "components/metadata/_macro.njk" import onsMetadata %}
{% from "components/input/_macro.njk" import onsInput %}

{% block main %}

    <div class="grid">
        <div class="grid__col col-6@m">
            <h1>Create message</h1>
            {{ 
                onsMetadata({
                    "metadataLabel": "This is an example of the metadata component",
                    "termCol": "2",
                    "descriptionCol": "10",
                    "itemsList": [
                        {
                            "term": "Survey:",
                            "descriptions": [ 
                                {
                                    "description": "Monthly Business Survey"
                                }
                            ]
                        }                                                    
                    ]
                }) 
            }}
            <p class="field">
            {{ 
                onsInput({
                    "id": "text",
                    "label": {
                        "text": "What is your message about?"
                    }
                }) 
            }}
            {{
                onsTextarea({
                    "id": "textarea",
                    "name": "feedback",
                    "label": {
                        "text": "Message"
                    }
                })
            }}
            </p>
            <p class="field">
                <div class="btn-group">
                    {{ 
                        onsButton({
                            "type": 'button',
                            "text": 'Send message',
                            "classes": 'btn-group__btn'
                        }) 
                    }}
                    {{ 
                        onsButton({
                            "type": 'button',
                            "text": 'Cancel',
                            "classes": 'btn--secondary btn-group__btn'
                        }) 
                    }}
                </div>
            </p>
        </div>
    </div>

{% endblock %}
