                    }) 
                }}
                {{ 
                    onsButton({
                        "type": 'button',
                        "text": 'No',
                        "classes": 'btn--secondary btn-group__btn',
                        "url": "/prototypes/SM-categorisation/20-category/100-create-message.html"
                    }) 
                }}
                </div>
            </p>
        </div>
    </div>

{% endblock %}
