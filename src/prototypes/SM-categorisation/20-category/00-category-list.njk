---
group: Frontstage
title: SM Categorisation
version: 14.4.0
layout: SM-categorisation/views/_master-messages
---

{% from "components/button/_macro.njk" import onsButton %}
{% from "components/radios/_macro.njk" import onsRadios %}
{% from "components/breadcrumb/_macro.njk" import onsBreadcrumb %}

{% block main %}
    <div class="grid">
        <div id="main" class="grid__col col-12@m u-pt-no u-pb-no">
            {{ 
                onsBreadcrumb({
                    "ariaLabel": 'Breadcrumb',
                    "itemsList": [
                        {
                            "url": '/prototypes/SM-categorisation/00-surveys-list.html',
                            "text": 'Surveys'
                        },
                        {
                            "url": '/prototypes/SM-categorisation/01-message-categories.html',
                            "text": 'Help'
                        },
                        {
                            "url": '/',
                            "text": 'Information about the survey',
                            "current": true
                        }
                    ]
                }) 
            }}
        </div>
        <div class="grid__col col-8@m u-pt-no">
            <h1>What information do you need?</h1>
            <form action="{{ pageInfo.parentPath }}/index.html">
                <p class="field">
                    <fieldset class="fieldset">
                        <legend class="fieldset__legend">Choose an option</legend>
                        <div class="radios__items">
                            <p class="radios__item">
                                <span class="radio">
                                    <input
                                        type="radio"
                                        id="answering-a-survey-question"
                                        data-action-url="{{ pageInfo.parentPath }}/10-category-send-message.html"
                                        class="radio__input js-radio"
                                        value="question-one"
                                        name="message-query">
                                    <label class="radio__label" for="answering-a-survey-question">How was my business selected?</label>
                                </span>
                            </p>
                            <br>
                            <p class="radios__item">
                                <span class="radio">
                                    <input
                                        type="radio"
                                        id="information-about-the-survey"
                                        data-action-url="{{ pageInfo.parentPath }}/20-category-send-message.html"
                                        class="radio__input js-radio"
                                        value="question-two"
                                        name="message-query">
                                    <label class="radio__label" for="information-about-the-survey">Can I be exempt from completing the survey questionnaire?</label>
                                </span>
                            </p>
                            <!--
                            <br>
                            <p class="radios__item">
                                <span class="radio">
                                    <input
                                        type="radio"
                                        id="my-company-details-have-changed"
                                        data-action-url="{{ pageInfo.parentPath }}/30-category-send-message.html"
                                        class="radio__input js-radio"
                                        value="question-three"
                                        name="message-query">
                                    <label class="radio__label" for="my-company-details-have-changed">I've already completed this survey</label>
                                </span>
                            </p>
                            <br>
                            <p class="radios__item">
                                <span class="radio">
                                    <input
                                        type="radio"
                                        id="a-technical-issue"
                                        data-action-url="{{ pageInfo.parentPath }}/40-category-send-message.html"
                                        class="radio__input js-radio"
                                        value="question-four"
                                        name="message-query">
                                    <label class="radio__label" for="a-technical-issue">Has my survey questionnaire been received?</label>
                                </span>
                            </p>
                            -->
                            <br>
                            <span class="radios__label u-mt-s u-fs-r--b" aria-hidden="true">Or, </span>
                            <p class="radios__item">
                                <span class="radio">
                                    <input
                                        type="radio"
                                        id="other-checkbox"
                                        data-action-url="{{ pageInfo.parentPath }}/50-category-send-message.html"
                                        class="radio__input js-radio "
                                        value="other" 
                                        name="message-query"
                                        aria-controls="other-checkbox-other-wrap" aria-haspopup="true">
                                        <label class="radio__label" for="other-checkbox">
                                            Something else
                                        </label>
                                        <span class="radio__other" id="other-checkbox-other-wrap">
                                            <label class="label u-fs-s--b" for="other-textbox">
                                                What information do you need?
                                            </label>
                                        <input
                                            type="text"
                                            id="other-textbox"
                                            class="input input--text input-type__input  input--w-auto "
                                            name="other-answer"/>
                                    </span>
                                </span>
                            </p>
                        </div>
                    </fieldset>
                </p>
                <p class="field">
                    <div class="btn-group">
                        <button type="submit" class="btn">
                            <span class="btn__inner">Continue</span>
                        </button>
                        {{ 
                            onsButton({
                                "type": 'button',
                                "text": 'Cancel',
                                "classes": 'btn--secondary btn-group__btn',
                                "url": "/prototypes/SM-categorisation/00-surveys-list.html"
                            }) 
                        }}
                    </div>
                </p>
            </form>
        </div>
    </div>
    <script>
        var submit = document.getElementById('btnFormSubmit');
        submit.addEventListener('click', submitForm);

        function submitForm(event) {
            event.preventDefault();
            event.stopPropagation();

            var href = '',
                inputs = this
                    .parentNode
                    .getElementsByTagName('input')
            for (var i = 0; i < inputs.length; i++) {
                if (inputs[i].getAttribute('name') == 'button' && inputs[i].checked) {
                    href = inputs[i].getAttribute('data-href');
                    window.location = href;
                }
            }
        }
    </script>

{% endblock %}
