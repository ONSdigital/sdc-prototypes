{% from "components/button/_macro.njk" import onsButton %}
{% from "components/radios/_macro.njk" import onsRadios %}
{% from "components/textarea/_macro.njk" import onsTextarea %}

{% block main %}

    <div class="grid">
        <div class="grid__col col-8@m">
            <div class="panel panel--info panel--simple u-mb-s">
                <div class="panel__body">
                    <p><a href="">Manage access to your surveys</a> if you are leaving the company, have changed your email address or want to allow a colleague access to the surveys</p>
                </div>
            </div>
        </div>
        <div class="grid__col col-6@m">
            <h1>Create message</h1>
            <p>To: ONS Business Surveys team</p>
            <p class="field">
                <label class="label" for="text">Subject</label>
                <input type="text" id="text" value="Change to contact details" class="input input--text input-type__input"/>
            </p>
            <p class="field">
                {{
            onsTextarea({
                "id": "textarea",
                "name": "feedback",
                "label": {
                    "text": "Message"
                }
            })
        }}
            </p>
        </div>
    </div>

    {% endblock %}
