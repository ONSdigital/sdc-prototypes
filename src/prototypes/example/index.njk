{% from "components/input/_macro.njk" import onsInput %}
{% from "components/button/_macro.njk" import onsButton %}

{% block PreMain %}
{% endblock %}

{% block main %}
    <form class="u-mt-m">
        <h1>What is your name?</h1>
        {{
            onsInput({
                "id": "first-name",
                "name": "first-name",
                "label": {
                    "text": "First or given name"
                }
            })
        }}
        {{
            onsInput({
                "id": "last-name",
                "name": "last-name",
                "label": {
                    "text": "Surname or family name"
                }
            })
        }}
        {{
            onsButton({
                "text": "Save and continue",
                "classes": "ons-u-mt-l"
            })
        }}
    </form>
{% endblock %}

{% block bodyEnd %}
    <script src="{{ pageInfo.rootPath }}/index.js"></script>
{% endblock %}
