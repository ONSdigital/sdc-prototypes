{%- macro onsCard(params) -%}
  {% from "prototypes/census-website/components/lists/_macro.njk" import onsList %}
  <div class="card">
      <h3 class="{{ params.titleClasses | default('u-fs-m')}}">
          {% if params.url -%}
              <a href="{{ params.url }}">
                  {{ params.title }}
              </a>
          {%- else %}
              {{ params.title }}
          {% endif %}
      </h3>
      <p>{{ params.text }}</p>
      {% if params.itemsList -%}
        {{ 
            onsList({
                "element": 'ul',
                "classes": 'list--dashed',
                "itemsList": params.itemsList
            }) 
        }}
      {% endif %}
  </div>
{%- endmacro -%}
