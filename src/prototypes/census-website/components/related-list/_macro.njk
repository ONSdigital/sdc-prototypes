{% macro onsRelatedList(params) %}
  {% from "prototypes/census-website/components/lists/_macro.njk" import onsList %}
  <div class="related-list">
    <h2 class="related-list__title u-fs-r--b u-mb-xs" id="{{ params.id }}">{{ params.title }}</h2>
    <nav role="navigation" class="related-list__navigation" aria-labelledby="{{ params.id }}">
      {{ 
          onsList({
              "element": 'ul',
              "classes": 'list--bare',
              "itemsList": params.itemsList
          }) 
      }}
    </nav>
  </div>
{% endmacro %}
