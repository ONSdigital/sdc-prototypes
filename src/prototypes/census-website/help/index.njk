---
version: 8.0.2
layout: census-website/views/_master
---

{% from "components/card/_macro.njk" import onsCard %}

{% block page %}
{% from "census-website/components/call-to-action/_macro.njk" import onsCallToAction %}
{{-
    onsCallToAction({
        "headingText": "Ready to start your census survey?",
        "paragraphText": "You'll need the access code from the letter we sent you.",
        "button": {
            "text": "Start survey",
            "classes": 'btn--small',
            "href": "https://deploy-preview-28--sdc-prototypes.netlify.com/prototypes/rh-census/"
        }
    })
}}
<div class="page__container {{ containerClasses }}">
    <div class="grid">
        <div class="grid__col">
            <main id="main-content" class="{{ pageClasses }}">
                
                    <div class="container">
                        <div class="col-8@m">
                            {% from "components/breadcrumb/_macro.njk" import onsBreadcrumb %}
                            {{ 
                                onsBreadcrumb({
                                    "ariaLabel": 'Breadcrumb',
                                    "itemsList": [
                                        {
                                            "url": pageInfo.parentPath,
                                            "text": 'Home'
                                        },
                                        {
                                            "url": '',
                                            "text": 'Help with your census',
                                            "current": true
                                        }
                                    ]
                                }) 
                            }}
                            <h1>Help with your census</h1>
                            
                        </div>
                    </div>
                
                <div class="container">
                <div class="grid grid--flex grid--column@xs@s u-mt-l">
                    <div class="grid__col grid__col--flex u-flex-grow u-flex-no-basis@s col-12@xs@s">
                        {{-
                            onsCard({
                                "title": 'How to complete your census',
                                "url": '/prototypes/census-website/help/how-to-complete-the-census/',
                                "text": 'What you need to do to get started.' 
                              
                            })
                        }}
                    </div>
                    <div class="grid__col grid__col--flex u-flex-grow u-flex-no-basis@s col-12@xs@s">
                        {{- 
                            onsCard({
                                "classes": 'u-fs-r',
                                "title": 'Help with the questions',
                                "url": '/prototypes/census-website/help/question-help.html',
                                "text": 'Guidance on how to answer the questions in the census.'
                            })
                        }}
                    </div>
                    <div class="grid__col grid__col--flex u-flex-grow u-flex-no-basis@s col-12@xs@s">
                        {{-
                            onsCard({
                                "title": 'Getting help to complete your census',
                                "url": '/prototypes/census-website/help/getting-help-to-complete-your-census/',
                                "text": 'You can get help from a friend or neighbour, or one of our advisors face-to-face or over the phone.'
                            })
                        }}
                    </div> 
 
                    {#
                    <div class="grid__col grid__col--flex u-flex-grow u-flex-no-basis@s col-12@xs@s">
                        {{- 
                            onsCard({
                                "classes": 'u-fs-r',
                                "title": 'Request a new access code or paper form',
                                "url": '#',
                                "text": "What to do if you\'ve lost your letter or do not want to complete online."
                            })
                        }}
                    </div>
                    #}
                    
                </div>
                <div class="u-mt-l">
                    <hr class="footer__hr" style="margin-bottom: 0;">
                    <h2 class="u-fs-r--b u-mt-l u-mb-xs">Don't have an access code or letter?</h2>
                    <p>You can <a href="/prototypes/rh-census/address.html">request a new code</a> to start a new survey if you have lost, forgotten or not received an access code.</p>
                </div> 
                </div>    
                </div>
                
                </div>
            </main>
        </div>
    </div>
</div>
{% endblock %}
