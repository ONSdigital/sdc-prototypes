---
version: 10.0.0
layout: census-website/views/_master
---

{% from "components/card/_macro.njk" import onsCard %}

{% block page %}
{% from "components/call-to-action/_macro.njk" import onsCallToAction %}
{{-
    onsCallToAction({
        "headingText": "Ready to start your census?",
        "paragraphText": "You'll need the access code from the letter we sent you.",
        "button": {
            "text": "Start census",
            "classes": 'btn--small',
            "url": "https://sdc-prototypes.netlify.com/prototypes/rh-census/home.html"
        }
    })
}}
<div class="page__container {{ containerClasses }}">
    <div class="grid">
        <div class="grid__col u-mb-l">
            <main id="main-content" class="{{ pageClasses }}">
                    <div class="container">
                        <div class="col-12@m">
                            {% from "components/breadcrumb/_macro.njk" import onsBreadcrumb %}
                            {{-
                                onsBreadcrumb({
                                    "ariaLabel": 'Breadcrumb',
                                    "itemsList": [
                                        {
                                            "url": pageInfo.parentPath,
                                            "text": 'Home'
                                        },
                                        {
                                                "url": '/prototypes/census-website/help/index.html',
                                                "text": 'Help with your census'
                                            }, 
                                        {
                                            "url": '',
                                            "text": 'Help with the census questions',
                                            "current": true
                                        }
                                    ]
                                }) 
                            -}}
                            <h1 class="u-fs-xxl u-mt-l@m col-12@m">Help with the census questions</h1>
                            
                        </div>
                    </div>
                <div class="container">
                    <div class="grid grid--flex grid--loose grid--column@xs@s u-mt-l">
                        <div class="grid__col grid__col--loose col-6@m col-12@xs@s">
                            {{- 
                                onsCard({
                                    "classes": 'u-fs-r u-mb-l',
                                    "title": 'Online census question help',
                                    "url": '/prototypes/census-website/help/help-guidance/online-help/index.html',
                                    "text": ''                               
                                })
                            }}
                            {{- 
                                onsCard({
                                    "classes": 'u-fs-r',
                                    "title": 'Paper census question help',
                                    "url": '/prototypes/census-website/help/help-guidance/paper-help/index.html',
                                    "text": ''
                                                                
                                })
                            }}
                            
                        </div>
                    </div>
                <div class="u-mt-l">
                    <hr class="footer__hr" style="margin-bottom: 0;">
                    <div class="grid">
                      <div class="grid__col col-8@m">
                        <h2 class="u-fs-r--b u-mt-l u-mb-xs">Don't have an access code or letter?</h2>
                        <p>You can <a href="/prototypes/rh-census/address.html">request a new code</a> to start a new online census survey if you have lost, forgotten or not received an access code.</p>
                        <p> To request a paper questionnaire please <a href="/prototypes/census-website/contact.html">contact us</a></p>
                      </div>
                    </div>
                  </div>
                </div>
            </main>
        </div>
    </div>
</div>
{% endblock %}
