---
version: 15.0.2
layout: bsl-v3/views/_question
---
{% from "components/question/_macro.njk" import onsQuestion %}
{% from "components/button/_macro.njk" import onsButton %}
{% from "components/input/_macro.njk" import onsInput %}
{% from "components/radios/_macro.njk" import onsRadios %}
{% from "components/panel/_macro.njk" import onsPanel %}
{% from "components/details/_macro.njk" import onsDetails %}
{% from "components/video/_macro.njk" import onsVideo %}
{% from "components/checkboxes/_macro.njk" import onsCheckboxes %}

{% set form =  {
    "method": "GET",
    "attributes": {
        "action":  pageInfo.rootPath + "/ethnic-group.html"
    }
} %}
{% block preMain %}
<div class="container page__container container u-mt-s">
    <a href="{{ pageInfo.rootPath }}/marital-status.html">Previous</a>
</div>
{% endblock %}
{% block main %}
    {% call onsQuestion({
        "title": "How would you describe your national identity?",
        "useFieldset": true
    }) %}
        <p><a href="" class="icon--bsl-show js-bsl-link">Show BSL</a></p>
        {% call onsDetails({
                "id": "details",
                "title": "What we mean by 'national identity'",
                "button": {
                    "close": "Hide this",
                    "contextSuffix": "content"
                }
        }) %}
            <p>National identity is not dependent on your ethnic group or citizenship.</p>
            <p>It is about the country or countries where you feel you belong or think of as home.</p>
        {% endcall %}
        {{ 
            onsCheckboxes({
                "legend": "What are your favourite pizza toppings?",
                "legendClasses": "u-vh",
                "checkboxesLabel": "Select all that apply",
                "name": "food-other",
                "checkboxes": [
                    {
                        "id": "English",
                        "label": {
                            "text": "English"
                        },
                        "value": "English"
                    },
                    {
                        "id": "Welsh",
                        "label": {
                            "text": "Welsh"
                        },
                        "value": "Welsh"
                    },
                    {
                        "id": "Scottish",
                        "label": {
                            "text": "Scottish"
                        },
                        "value": "Scottish"
                    },
                    {
                        "id": "northern-irish",
                        "label": {
                            "text": "Northern Irish"
                        },
                        "value": "Northern Irish"
                    },
                    {
                        "id": "British",
                        "label": {
                            "text": "British"
                        },
                        "value": "British"
                    },
                    {
                        "id": "Other",
                        "label": {
                            "text": "Other",
                            "description": "Select to enter answer"
                        },
                        "value": "Other",
                        "other": {
                            "id": "other-textbox",
                            "name": "other-answer",
                            "label": {
                                "text": "Describe your national identity"
                            }
                        }
                    }
                ]
            }) 
        }}
    {% endcall %}

    {{ onsButton({
        "text": "Save and continue",
        "classes": "u-ml-no u-mt-xl u-mb-xl"
    }) }}     
{% endblock %}
{% block bodyEnd %}
    <div class="bsl-video u-d-no">
        <div class="bsl-video__container">
            <div class="bsl-video__video">
                <iframe width="560" height="315" src="https://www.youtube-nocookie.com/embed/3Xz4M_erAOI" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            </div>
        </div>
        <div class="bsl-video__controls">
            <div class="grid grid--gutterless grid--flex grid--between grid--vertical-center grid--no-wrap">
                {{ onsButton({
                    "text": "Hide BSL",
                    "classes": "js-bsl-btn btn--ghost btn--small u-mb-xs u-mt-xs grid__col col-auto js-remove-bsl bsl-video__remove-link",
                    "innerClasses": "icon--bsl-hide"
                }) }}
            </div>
        </div>
    </div>
    <script src="{{ pageInfo.rootPath }}/scripts/index.js"></script>
{% endblock %}
