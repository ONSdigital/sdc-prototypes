{% extends "../page-template/_template.njk" %}

{% block head %}
    <link rel="stylesheet" href="{{ pageInfo.rootPath }}/styles/styles.css" />
{% endblock %}

{% set pageConfig =  {
    "title": "Census 2021",
    "theme": "census",
    "header": {
        "logoHref": "https://www.ons.gov.uk",
        "logo": pageInfo.rootPath + "/img/ons-logo-en.svg",
        "logoAlt": "Office for National Statistics",        
        "titleLogo": "/img/census-logo-en.svg",
        "titleLogoHref": pageInfo.rootPath,
        "titleLogoAlt": "Census 2021"
    },
    "serviceLinks": {
        "ariaLabel": "Site services menu",
        "ariaListLabel": "Navigation menu",
        "itemsList": [
            {
                "text": "BSL",
                "url": pageInfo.rootPath + "/bsl",
                "classes": "icon--bsl-show" 
            }
        ]
    },
    "language": {
        "allLanguagesUrl": "#",
        "languages": [
            {
                "url": "#",
                "ISOCode": "en",
                "text": "English",
                "buttonAriaLabel": "Language selector. Current language: English",
                "chooseLanguage": "Choose language",
                "current": true
            },
            {
                "url": "#",
                "ISOCode": "cy",
                "text": "Cymraeg",
                "buttonAriaLabel": "Dewisydd iaith. Iaith gyfredol: Cymraeg",
                "chooseLanguage": "Dewiswch iaith",
                "current": false
            }
        ]
    },    
    "footer": {
        "rows": [
            {
                "itemsList": [
                    {
                        "text": 'Help',
                        "url": '#'
                    },
                    {
                        "text": 'Contact us',
                        "url": '#'
                    }
                ]
            },
            {
                "itemsList": [
                    {
                        "text": 'Cookies',
                        "url": '#'
                    },
                    {
                        "text": 'Accessibility',
                        "url": '#'
                    },
                    {
                        "text": 'Privacy and data protection',
                        "url": '#'
                    }
                ]
            }
        ]
    }
} %}

{% block bodyEnd %}
    <div class="bsl-video u-d-no">
        <div class="bsl-video__container">
            <div class="bsl-video__video">
                <iframe width="560" height="315" src="https://www.youtube-nocookie.com/embed/XQu8TTBmGhA" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            </div>
        </div>
        <div class="bsl-video__controls">
            <div class="grid grid--gutterless grid--flex grid--between grid--vertical-center grid--no-wrap">
                <div class="grid__col col-auto">
                    <a class="js-remove-bsl bsl-video__remove-link" href="{{ pageInfo.path + '.html' }}">Turn off BSL</a>
                </div>
                {{ onsButton({
                    "text": "Hide BSL",
                    "classes": "js-bsl-btn btn--ghost btn--small u-mb-xs u-mt-xs grid__col col-auto",
                    "innerClasses": "icon--bsl-btn"
                }) }}
            </div>
        </div>
    </div>
    <script src="{{ pageInfo.rootPath }}/scripts/index.js"></script>
{% endblock %}
