---
group: SCD Internal
title: Nudge emails
version: 14.2.1
layout: nudge-emails/views/_master-error
---

{% from "components/date-input/_macro.njk" import onsDateInput %}
{% from "components/button/_macro.njk" import onsButton %}

{% block main %}
  <div class="page__container container container--wide">

    {% from "components/breadcrumb/_macro.njk" import onsBreadcrumb %}
    {{ 
        onsBreadcrumb({
            "ariaLabel": 'Breadcrumb',
            "itemsList": [
                {
                    "url": '/',
                    "text": 'Home'
                },
                {
                    "url": '/surveys',
                    "text": 'Surveys'
                },
                {
                    "url": '/009-MBS',
                    "text": '009 MBS'
                },
                {
                    "text": '1912',
                    "current": true
                }
            ]
        }) 
    }}

    <main id="main-content" class="page__main {{ pageClasses }}">

      <div class="grid">
        <div class="grid__col col-8@m">
          <div class="pl-grid-col">
            <h1 name="page-ce-title">Edit return by date</h1>
            <fieldset id="date" class="fieldset">
              <legend class="fieldset__legend">
                <span class="fieldset__description">Must be before Exercise end Monday 28 Feb 2022 00:00. <br>Any nudge emails that are scheduled after the Return by date will be removed.</span>
              </legend>
              <div class="field-group">
                <p class="field">
                  <label class="label" for="date-day">Day</label>
                  <input type="text" id="date-day" value="7" class="input input--text input-type__input input--w-2" name="day" min="1" max="31" pattern="[0-9]*" inputmode="numeric" autocomplete="bday-day"/>
                </p>
                <p class="field">
                  <label class="label" for="date-month">Month</label>
                  <input type="text" id="date-month" value="1" class="input input--text input-type__input input--w-2" name="month" min="1" max="12" pattern="[0-9]*" inputmode="numeric" autocomplete="bday-month"/>
                </p>
                <p class="field">
                  <label class="label" for="date-year">Year</label>
                  <input type="text" id="date-year" value="2020" class="input input--text input-type__input input--w-4" name="year" min="1000" max="3000" pattern="[0-9]*" inputmode="numeric" autocomplete="bday-year"/>
                </p>
              </div>
            </fieldset>
            <fieldset id="date" class="fieldset">
              <legend class="fieldset__legend">Time (Newport)</legend>
              <div class="field-group">
                <p class="field">
                  <label class="label u-fs-s--b" for="time-select-hrs" id="time-hrs">Hrs</label>
                  <select class="input input--select input--select__time-hrs input--w-4" id="time-select-hrs" name="hour">
                    <option selected="" value="00">00</option>
                    <option value="01">01</option>
                    <option value="02">02</option>
                    <option value="03">03</option>
                    <option value="04">04</option>
                    <option value="05">05</option>
                    <option value="06">06</option>
                    <option value="07">07</option>
                    <option value="08">08</option>
                    <option value="09">09</option>
                    <option value="10">10</option>
                    <option value="11">11</option>
                    <option value="12">12</option>
                    <option value="13">13</option>
                    <option value="14">14</option>
                    <option value="15">15</option>
                    <option value="16">16</option>
                    <option value="17">17</option>
                    <option value="18">18</option>
                    <option value="19">19</option>
                    <option value="20">20</option>
                    <option value="21">21</option>
                    <option value="22">22</option>
                    <option value="23">23</option>
                  </select>
                </p>
                <p class="field">
                  <label class="label u-fs-s--b" for="time-select-mins" id="time-mins">Mins</label>
                  <select class="input input--select input--select__time-mins input--w-4" id="time-select-mins" name="minute">
                    <option selected="" value="00">00</option>
                    <option value="15">15</option>
                    <option value="30">30</option>
                    <option value="45">45</option>
                  </select>
                </p>
              </div>
            </fieldset>

            <p class="field">
              <button type="submit" class="btn" onclick="location.href='{{ pageInfo.rootPath }}/version-three/saved-return-by-date-error.html';">
                <span class="btn__inner">Save</span>
              </button>
            </p>
            <p class="field">
              <a href="{{ pageInfo.rootPath }}/version-one/saved-nudge-email.html">Cancel</a>
            </p>
          </div>
        </div>
      </div>
    </main>
  </div>
{% endblock %}
