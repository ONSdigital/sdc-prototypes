version: 13.6.9
layout: rh-fulfilments/views/_master
---

{% from 'components/question/_macro.njk' import onsQuestion %}
{% from 'components/button/_macro.njk' import onsButton %}
{% from 'components/input/_macro.njk' import onsInput %}

{% set form =  {
    'method': 'GET',
    'attributes': {
        'action': pageInfo.parentPath + "/confirm-mobile/"
    }
} %}

{% block main %}

    <script>
        sessionStorage.removeItem("{{ pageInfo.parentPath }}/enter-mobile");
        sessionStorage.removeItem("{{ pageInfo.parentPath }}/confirm-mobile");
    </script>

    {% call onsQuestion({
        'title': 'What is your mobile phone number?',
        'description': '<p>We will send an access code by text to this number.</p>'
    }) %}


            {{
                onsInput({
                    'id': 'telephone',
                    'type': 'tel',
                    'autocomplete': 'tel',
                    'classes': 'input--w-8',
                    'label': {
                        'text': 'UK mobile phone number'
                    },
                    'name': 'request-mobile-number'
                })
            }}


    {% endcall %}

    {{
        onsButton({
            'text': 'Continue',
            'classes': 'u-mt-l'
        })
    }}

{% endblock %}
