---
version: 13.6.9
layout: rh-fulfilments/views/_master
---

{% from 'components/question/_macro.njk' import onsQuestion %}
{% from 'components/button/_macro.njk' import onsButton %}
{% from 'components/radios/_macro.njk' import onsRadios %}

{% set form =  {
    'method': 'GET',
    'attributes': {
        'action': "/prototypes/rh-fulfilments/household-code/code-sent-sms/"
    }
} %}

{% set form_options = [
                {
                    'id': 'yes',
                    'label': {
                        'text': 'Yes, send the text now'
                    },
                    'value': 'yes',
                    "attributes": {
                        "data-action-url": pageInfo.rootPath + "/household-code/code-sent-sms/"
                    }
                },
                {
                    'id': 'no',
                    'label': {
                        'text': 'No, I need to change it'
                    },
                    'value': 'no',
                    "attributes": {
                        "data-action-url": pageInfo.rootPath + "/household-code/enter-mobile/"
                    }
                }
            ]
%}

{% block main %}

    {% call onsQuestion({
        'title': 'Is this mobile phone number correct?',
        'description': '<p><em class="u-fs-r--b highlight js-mobile-number" data-mobile-input-url="' + pageInfo.parentPath + '/enter-mobile">{x}</em></p>'
    }) %}


    {{
        onsRadios({
            'name': 'mobile-confirm',
            'radios': form_options
        })
    }}

    {% endcall %}

    {{
        onsButton({
            'text': 'Continue',
            'classes': 'u-mt-l'
        })
    }}

{% endblock %}
