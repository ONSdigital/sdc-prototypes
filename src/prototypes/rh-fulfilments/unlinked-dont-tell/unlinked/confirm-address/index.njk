---
version: 13.6.9
layout: rh-fulfilments/views/_master
---

{% from 'components/question/_macro.njk' import onsQuestion %}
{% from 'components/button/_macro.njk' import onsButton %}
{% from 'components/radios/_macro.njk' import onsRadios %}

{% set form =  {
    "method": "GET",
    "attributes": {
        "action": "{{ pageInfo.parentPath }}/census-form/"
    }
} %}

{% block main %}

    {% call onsQuestion({
        'title': 'Is this address correct?',
        'description': '<p class="js-address-confirm" data-address-input-url="' + pageInfo.parentPath + '/select-address"></p>'
    }) %}

    {{
        onsRadios({
            'name': 'address-confirm',
            'radios': [
                {
                    'id': 'yes',
                    'label': {
                        'text': 'Yes, this address is correct'
                    },
                    'value': 'yes',
                    "attributes": {
                        "data-action-url": pageInfo.parentPath + "/census-form/"
                    }
                },
                {
                    'id': 'change',
                    'label': {
                        'text': 'No, I need to make a change to this address'
                    },
                    'value': 'change',
                    "attributes": {
                        "data-action-url": pageInfo.parentPath + "/enter-address/"
                    }
                },
                {
                    'id': 'no',
                    'label': {
                        'text': 'No, search for address again'
                    },
                    'value': 'no',
                    "attributes": {
                        "data-action-url": pageInfo.parentPath + "/enter-address/"
                    }
                }
            ]
        })
    }}

    {% endcall %}

    {{
        onsButton({
            'text': 'Continue',
            'classes': 'u-mt-l'
        })
    }}

{% endblock %}
