{% from 'components/question/_macro.njk' import onsQuestion %}
{% from 'components/button/_macro.njk' import onsButton %}
{% from 'components/input/_macro.njk' import onsInput %}

    <script>
        sessionStorage.removeItem("{{ pageInfo.parentPath }}/enter-address");
        sessionStorage.removeItem("{{ pageInfo.parentPath }}/select-address");
        sessionStorage.removeItem("{{ pageInfo.parentPath }}/confirm-address-ce");
        sessionStorage.removeItem("{{ pageInfo.parentPath }}/confirm-address-hh");
        sessionStorage.removeItem("{{ pageInfo.parentPath }}/confirm-address-scotland");
        sessionStorage.removeItem("{{ pageInfo.parentPath }}/confirm-address-spg");
    </script>
    
    <form action="{{ pageInfo.parentPath }}/select-address/">
        {% call onsQuestion({
            'title': 'What is your postcode?',
            'description': '<p>To complete your request we need to know the address for which you are answering.</p>'
        }) %}
    
            {{
                onsInput({
                    'id': 'postcode',
                    'type': 'postcode',
                    'autocomplete': 'postcode',
                    'classes': 'input--w-8',
                    'label': {
                        'text': 'UK postcode'
                    },
                    'name': 'request-postcode'
                })
            }}

    
        {% endcall %}
    
        {{
            onsButton({
                'text': 'Continue',
                'classes': 'u-mt-l'
            })
        }}
    </form>
