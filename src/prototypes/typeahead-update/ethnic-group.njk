{% from "components/button/_macro.njk" import onsButton %}
{% from "components/radios/_macro.njk" import onsRadios %}
{% from "components/details/_macro.njk" import onsDetails %}

{% block main %}
    <a class="previous-link js-previous" href="{{ pageInfo.rootPath }}/national-identity.html">Previous</a>
    <form action="{{ pageInfo.parentPath }}/religion.html?previous={{ pageInfo.path }}.html">
        {{ 
            onsRadios({
                "legend": "<h1 class=\"u-fs-l\">What is your ethnic group?</h1>",
                "name": "ethnic-group",
                "classes": "u-mt-s",
                "radios": [
                    {
                        "id": "white",
                        "label": {
                            "text": "White",
                            "description": "Includes British, Northern Irish, Irish, Gypsy, Irish Traveller, Roma or any other White background"
                        },
                        "name": "white",
                        "attributes": {
                            "data-action-url": pageInfo.parentPath + "/ethnic-group-white.html"
                        }
                    },
                    {
                        "id": "mixed",
                        "label": {
                            "text": "Mixed or Multiple ethnic groups",
                            "description": "Includes White and Black Caribbean, White and Black African, White and Asian or any other Mixed or Multiple background"
                        },
                        "name": "mixed",
                        "attributes": {
                            "data-action-url": pageInfo.parentPath + "/ethnic-group-mixed.html"
                        }
                    },
                    {
                        "id": "asian",
                        "label": {
                            "text": "Asian or Asian British",
                            "description": "Includes Indian, Pakistani, Bangladeshi, Chinese or any other Asian background"
                        },
                        "name": "asian",
                        "attributes": {
                            "data-action-url": pageInfo.parentPath + "/ethnic-group-asian.html"
                        }
                    },
                    {
                        "id": "black",
                        "label": {
                            "text": "Black, Black British, Caribbean or African",
                            "description": "Includes Black British, Caribbean, African or any other Black background"
                        },
                        "name": "black",
                        "attributes": {
                            "data-action-url": pageInfo.parentPath + "/ethnic-group-black.html"
                        }
                    },
                    {
                        "id": "other",
                        "label": {
                            "text": "Other ethnic group",
                            "description": "Includes Arab or any other ethnic group"
                        },
                        "name": "other",
                        "attributes": {
                            "data-action-url": pageInfo.parentPath + "/ethnic-group-arab-other.html"
                        }
                    }
                ]
            }) 
        }}
        {{
            onsDetails({
                "id": "details",
                "title": "Why your answer is important",
                "content": "<p>Your answer will help to support equality and fairness in your community. Councils and government use information on ethnic group to make sure they <ul><li>provide services and share funding fairly</li> <li>understand and represent everyoneâ€™s interests</li></ul></p>",
                "button": {
                    "close": "Hide this"
                }
            })
        }}
        {{
           onsButton({
                "text": "Save and continue",
                "classes": "u-mt-l"
            })
        }}
    </form>
{% endblock %}
