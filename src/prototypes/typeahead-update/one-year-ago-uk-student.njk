---
version: 14.4.4
layout: typeahead-update/views/_master
---
{% from "typeahead-update/components/address-input/_macro.njk" import prototypeAddressInput %}
{% from "components/button/_macro.njk" import onsButton %}
{% from "components/question/_macro.njk" import onsQuestion %}

{% block main %}
    <a class="previous-link js-previous" href="{{ pageInfo.rootPath }}/one-year-ago-address.html">Previous</a>
    <form action="{{ pageInfo.parentPath }}/one-year-ago-uk-student-confirm.html?previous={{ pageInfo.path }}.html">
        {% call onsQuestion({
            "title": "What was your student term-time or boarding school address one year ago?"
        }) %}
        {{
            prototypeAddressInput({
                "id": "address",
                "classes": "u-mt-s",
                "label": {
                    "text": "<h1 class=\"u-fs-l\">What was your student term-time or boarding school address one year ago?</h1>"
                },
                "line1": {
                    "label": "Address line 1"
                },
                "line2": {
                    "label": "Address line 2"
                },
                "town": {
                    "label": "Town or City"
                },
                "county": {
                    "label": "County"
                },
                "postcode": {
                    "label": "Postcode"
                },
                "typeahead": {
                    "label": {
                        "text": "Enter details of your address or postcode one year ago",
                        "description": "Enter your own answer or select from suggestions"
                    },
                    "typeahead": {
                        "instructions": "Use up and down keys to navigate addresses once you\'ve typed more than two characters. Use the enter key to select a address. Touch device users, explore by touch or with swipe gestures.",
                        "content": {
                            "no_results": "No addresses found",
                            "aria_no_results": "No addresses found for the query",
                            "aria_you_have_selected": "You have selected",
                            "aria_found_by_alternative_name": "found by alternative name",
                            "aria_min_chars": "Type in 5 or more characters for addresses.",
                            "aria_one_result": "There is one address available.",
                            "aria_n_results": "There are {n} addresses available.",
                            "aria_limited_results": "Results have been limited to 10 addresses. Type more characters to refine your search.",
                            "more_results": "Continue entering to improve results",
                            "results_title": "Select an address"
                        },
                        "autocomplete": "new-address"
                    }
                },
                "or": "Or",
                "searchButton": "Search for an address",
                "manualButton": "Manually enter address",
                "selectError": "Select an address to continue."
            })
        }}
         {% endcall %}
        {{
            onsButton({
                "text": "Save and continue",
                "classes": "u-mt-l"
            })
        }}
    </form>
{% endblock %}
