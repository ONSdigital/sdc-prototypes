---
version: 14.4.4
layout: typeahead-update/views/_master
---
{% from "components/button/_macro.njk" import onsButton %}
{% from "components/checkboxes/_macro.njk" import onsCheckboxes %}
{% from "components/question/_macro.njk" import onsQuestion %}

{% block main %}
    <a class="previous-link js-previous" href="{{ pageInfo.rootPath }}/ethnic-group.html">Previous</a>
    <form action="{{ pageInfo.parentPath }}/main-language.html?previous={{ pageInfo.path }}.html">
        {% call onsQuestion({
            "title": "What is your religion?",
            "description": "This question is voluntary"
        }) %}
        {{ 
            onsCheckboxes({
                "legend": "What is your religion?",
                "legendClasses": "u-vh",
                "name": "religion",
                "classes": "u-mt-s",
                "checkboxesLabel": "Select one option only",
                "questionMode": true,
                "checkboxes": [
                    {
                        "id": "none",
                        "label": {
                            "text": "No religion"
                        },
                        "name": "none"
                    },
                    {
                        "id": "christian",
                        "label": {
                            "text": "Christian",
                            "description": "Including Church of England, Catholic, Protestant and all other Christian denominations"
                        },
                        "name": "christian"
                    },
                    {
                        "id": "buddhist",
                        "label": {
                            "text": "Buddhist"
                        },
                        "name": "buddhist"
                    },
                    {
                        "id": "hindu",
                        "label": {
                            "text": "Hindu"
                        },
                        "name": "hindu"
                    },
                    {
                        "id": "jewish",
                        "label": {
                            "text": "Jewish"
                        },
                        "name": "jewish"
                    },
                    {
                        "id": "muslim",
                        "label": {
                            "text": "Muslim"
                        },
                        "name": "muslim"
                    },
                    {
                        "id": "sikh",
                        "label": {
                            "text": "Sikh"
                        },
                        "name": "sikh"
                    },
                    {
                        "id": "other",
                        "label": {
                            "text": "Any other religion",
                            "description": "You can enter your religion on the next question"
                        },
                        "name": "other",
                        "attributes": {
                            "data-action-url": pageInfo.parentPath + "/religion-other.html"
                        }
                    }
                ]
            }) 
        }}
        {% endcall %}
        {{
           onsButton({
                "text": "Save and continue",
                "classes": "u-mt-l"
            })
        }}
    </form>
{% endblock %}
