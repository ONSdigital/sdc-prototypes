---
version: 14.4.4
layout: typeahead-update/views/_master
---
{% from "components/button/_macro.njk" import onsButton %}
{% from "components/radios/_macro.njk" import onsRadios %}
{% from "components/question/_macro.njk" import onsQuestion %}

{% block main %}
    <a class="previous-link js-previous" href="{{ pageInfo.rootPath }}/index.html">Previous</a>
    <form action="{{ pageInfo.parentPath }}/name.html">
        {% call onsQuestion({
            "title": "Are you answering these questions for yourself or for someone else?"
        }) %}
        {{ 
            onsRadios({
                "legend": " <h1 class=\"u-fs-l\">Are you answering these questions for yourself or for someone else?</h1>",
                "legendClasses": "u-vh",
                "name": "country-of-birth",
                "classes": "u-mt-s",
                "radios": [
                    {
                        "id": "myself",
                        "label": {
                            "text": "For myself"
                        },
                        "name": "myself"
                    },
                    {
                        "id": "someone-else",
                        "label": {
                            "text": "For someone else"
                        },
                        "name": "someone-else"
                    }
                ]
            }) 
        }}
        {% endcall %}
        {{
           onsButton({
                "text": "Save and continue",
                "classes": "u-mt-l"
            })
        }}
    </form>
{% endblock %}
