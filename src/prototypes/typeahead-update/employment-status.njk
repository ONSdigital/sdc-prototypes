---
version: 14.4.4
layout: typeahead-update/views/_master
---
{% from "components/button/_macro.njk" import onsButton %}
{% from "components/radios/_macro.njk" import onsRadios %}
{% from "components/question/_macro.njk" import onsQuestion %}

{% block main %}
    <a class="previous-link js-previous" href="{{ pageInfo.rootPath }}/passport.html">Previous</a>
    <form action="{{ pageInfo.parentPath }}/summary.html">
        {% call onsQuestion({
            "title": "What is your employment status?"
        }) %}
        {{ 
            onsRadios({
                "legend": "<h1 class=\"u-fs-l\">What is your employment status?</h1>",
                "legendClasses": "u-vh",
                "name": "employment-status",
                "classes": "u-mt-m",
                "radios": [
                    {
                        "id": "employee",
                        "label": {
                            "text": "Employee"
                        },
                        "name": "employee",
                        "attributes": {
                            "data-action-url": pageInfo.parentPath  + "/job-title.html"
                        }
                    },
                    {
                        "id": "self-employed-no-employees",
                        "label": {
                            "text": "Self-employed or freelance without employees"
                        },
                        "name": "self-employed-no-employees",
                         "attributes": {
                            "data-action-url": pageInfo.parentPath  + "/job-title.html"
                        }
                    },
                    {
                        "id": "self-employed-employees",
                        "label": {
                            "text": "Self-employed with employees"
                        },
                        "name": "self-employed-employees",
                        "attributes": {
                            "data-action-url": pageInfo.parentPath  + "/job-title.html"
                        }
                    },
                    {
                        "id": "unemployed",
                        "label": {
                            "text": "None of these"
                        },
                        "name": "unemployed"
                    }
                ]
            }) 
        }}
        {% endcall %}
        {{
           onsButton({
                "text": "Save and continue",
                "classes": "u-mt-l"
            })
        }}
    </form>
{% endblock %}
