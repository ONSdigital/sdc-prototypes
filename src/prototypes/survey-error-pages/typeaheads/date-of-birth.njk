---
version: 5.0.1
layout: typeaheads/views/_master
---
{% from "components/date-input/_macro.njk" import onsDateInput %}
{% from "components/button/_macro.njk" import onsButton %}

{% block main %}
    <a class="previous-link js-previous" href="{{ pageInfo.rootPath }}/name.html">Previous</a>
    <form action="{{ pageInfo.parentPath }}/address-check.html">
        {{
            onsDateInput({
                "id": "dob",
                "questionMode": true,
                "legend": "What is your date of birth?",
                "classes": "u-mt-s",
                "description": "For example, 31 3 1980",
                "day": {
                    "label": {
                        "text": "Day"
                    },
                    "name": "dob-day",
                    "attributes": {
                        "autocomplete": "bday-day"
                    }
                },
                "month": {
                    "label": {
                        "text": "Month"
                    },
                    "name": "dob-month",
                    "attributes": {
                        "autocomplete": "bday-month"
                    }
                },
                "year": {
                    "label": {
                        "text": "Year"
                    },
                    "attributes": {
                        "autocomplete": "bday-year",
                        "maxlength": "4"
                    }
                }
            })
        }}

        {{
            onsButton({
                "text": "Save and continue",
                "classes": "u-mt-l"
            })
        }}
    </form>
    {% include "typeaheads/views/partials/_heroku-waker.njk" %}
{% endblock %}
