{% from "components/button/_macro.njk" import onsButton %}
{% from "components/textarea/_macro.njk" import onsTextarea %}
{% from "components/input/_macro.njk" import onsInput %}

{% block main %}

    <h1 name="page-surveys-title">Load collection instruments for 001 NEW</h1>
    <div class="grid overview">
        <div class="grid__col col-6@m">
            {{
                onsTextarea({
                    "id": "textarea",
                    "name": "formtype",
                    "rows": "3",
                    "label": {
                        "text": "Add form types",
                        "description": "Separate multiple form types with a comma. For example: 0101, 0102, 0103",
                        "classes": "u-fs-m"
                    }
                })
            }}
            <p class="field">
                <form action="" method="get">
                    {{ 
                    onsButton({
                        "text": 'Add',
                        "url": 'load-collection-instruments-added.html',
                        "classes": 'btn--secondary btn--small'
                    }) 
                }}
                </form>
            </p>
            <!--
        </div>
        <div class="grid__col col-4@m push-1@m">
        -->
            <h2 class="u-fs-m u-mt-l u-mb-no">Collection instruments</h3>
            <p>When the collection instruments have been loaded they  will be listed here.</p>
            <p class="field u-mt-l">
                {{ 
                    onsButton({
                        "text": 'Save and exit',
                        "url": 'create-collection-exercise.html',
                        "classes": 'btn--disabled'
                    }) 
                }}
            </p>
        </div>
    </div>

{% endblock %}
