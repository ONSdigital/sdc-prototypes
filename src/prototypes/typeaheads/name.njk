---
version: 0.5.0
layout: typeaheads/views/_master
---
{% from "components/field/_macro.njk" import onsField %}
{% from "components/input/_macro.njk" import onsInput %}
{% from "components/button/_macro.njk" import onsButton %}

{% block content %}
    <form action="{{ pageInfo.parentPath }}/date-of-birth.html">
       {% call onsField({
           "id": "name",
           "legend": "<h1 class=\"u-fs-l\">What is your name?</h1>"
       }) %}
            {{
                onsInput({
                    "id": "first-name",
                    "name": "first-name",
                    "label": {
                        "text": "First name"
                    }
                })
            }}
            {{
                onsInput({
                    "id": "middle-name",
                    "name": "middle-name",
                    "label": {
                        "text": "Middle name(s)"
                    }
                })
            }}
            {{
                onsInput({
                    "id": "last-name",
                    "name": "last-name",
                    "label": {
                        "text": "Last name"
                    }
                })
            }}
        {% endcall %}
        {{
            onsButton({
                "text": "Save and continue",
                "classes": "u-mt-l"
            })
        }}
    </form>
    {% include "typeaheads/views/partials/_heroku-waker.njk" %}
{% endblock %}


