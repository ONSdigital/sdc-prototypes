                    }
                ]
            },
            {
                "title": 'Statistics',
                "itemsList": [
                    {
                        "text": 'UK Statistics Authority',
                        "url": '#'
                    },
                    {
                        "text": 'Release calendar',
                        "url": '#'
                    },
                    {
                        "text": 'News',
                        "url": '#'
                    }
                ]
            }
        ]
    }) 
}}
{% endblock %}


{% block bodyEnd %}
    <script src="{{ pageInfo.rootPath }}/index.js"></script>
{% endblock %}
