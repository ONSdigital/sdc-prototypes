group: Frontstage
title: SM Categorisation
version: 17.0.0
layout: SM-categorisation/views/version-2/_master-survey
---

{% from "components/input/_macro.njk" import onsInput %}
{% from "components/breadcrumb/_macro.njk" import onsBreadcrumb %}

{% block main %}

    <div class="grid">
        <div id="main" class="grid__col col-12@m u-pt-no u-pb-no">
            {{ 
                onsBreadcrumb({
                    "ariaLabel": 'Breadcrumb',
                    "itemsList": [
                        {
                            "url": '/prototypes/SM-categorisation/version-2/40-category/00-category-list.html',
                            "text": 'Details have changed'
                        },
                        {
                            "url": '/',
                            "text": 'Transfer surveys',
                            "current": true
                        }
                    ]
                }) 
            }}
        </div>
        <div class="grid__col col-8@m u-pt-no">
            <h1>Change email address</h1>
            <p>To change your email address we will create a new account and transfer all your surveys to the new account.</p>

            <!--
            <p>You'll need to:</p>
            <ol>
                <li>Provide the email address</li>
                <li>Send the enrolment code</li>
            </ol>
            -->

            <!-- <p>To whom would you like to transfer your surveys?</p> -->

            <div class="field">
                <p>
                    {{ 
                        onsInput({
                            "id": "recipient-one",
                            "class": "hello",
                            "label": {
                                "text": "New email address"
                            }
                        }) 
                    }}
                </p>
            </div>

        
            <p class="field">
                <button type="submit" class="btn" onclick="location.href='{{ pageInfo.rootPath }}/version-2/account/01-change-account-details/03-send-enrolment-codes.html';">
                    <span class="btn__inner">Continue</span>
                </button>
                <button type="submit" class="btn btn--secondary" onclick="location.href='{{ pageInfo.rootPath }}/version-2/account/01-change-account-details/01-change-details.html';">
                    <span class="btn__inner">Cancel</span>
                </button>
            </p>
        </div>
    </div>

{% endblock %}
