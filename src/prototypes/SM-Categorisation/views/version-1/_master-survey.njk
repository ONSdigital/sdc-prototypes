{% extends "page-templates/_template.njk" %}

{% block head %}
    <link rel="stylesheet" href="{{ pageInfo.rootPath }}/version-1/styles.css"/>
{% endblock %}



{% block header %}
<header class="header ">
  <div class="header__top" role="banner">
    <div class="container">
      <div class="header__grid-top grid grid--gutterless grid--flex grid--between grid--vertical-center grid--no-wrap">
        <div class="grid__col col-auto">
            <a class="header__logo-link" href="/prototypes/sm-categorisation/version-2/">
            <img class="header__logo" src="https://cdn.ons.gov.uk/sdc/design-system/14.4.0/img/ons-logo-pos-en.svg" alt="ONS">
            </a>
        </div>
                
        
        <div class="header__links grid__col col-auto">
            <div class="grid__col col-auto u-d-no@xs@m">
            <nav class="header-service-nav header-service-nav--internal" aria-label="Site services menu">
                <ul class="header-service-nav__list" aria-label="Navigation menu">
                    <li class="header-service-nav__item">
                        <a href="30-my-account.html" class="header-service-nav__link">Account</a>
                    </li>
                    <li class="header-service-nav__item">
                        <a href="01-message-categories.html" class="header-service-nav__link">Help</a>
                    </li>
                </ul>
            </nav>
            </div>
        </div>
      </div>
    </div>
  </div>
  <div class="header__main">
    <div class="container">
      <div class="grid grid--gutterless grid--flex grid--between grid--vertical-center grid--no-wrap">
        <div class="grid__col col-auto u-flex-shrink">
          <div class="header__title">Monthly Business Survey</div>
        </div>
        <div class="grid__col col-auto u-flex-no-shrink u-d-no@xs@m">
          <a href="#" role="button" class="btn btn--ghost u-d-no@xs@m btn--link">
            <span class="btn__inner">Sign out</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</header>
{% endblock %}

{% block pageContent %}
    {% block preMain %}{% endblock %}
    <div class="page__container container">
        <main id="main-content" class="page__main {{ pageClasses }}">
            {% block main %}{% endblock %}
        </main>
    </div>
{% endblock %}

