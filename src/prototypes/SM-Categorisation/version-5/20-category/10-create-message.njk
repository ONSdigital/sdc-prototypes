---
group: Frontstage
title: SM Categorisation
version: 20.0.3
layout: sm-categorisation/views/version-5/_master-survey
---

{% from "components/button/_macro.njk" import onsButton %}
{% from "components/radios/_macro.njk" import onsRadios %}
{% from "components/textarea/_macro.njk" import onsTextarea %}
{% from "components/metadata/_macro.njk" import onsMetadata %}
{% from "components/breadcrumb/_macro.njk" import onsBreadcrumb %}

{% block main %}

    <div class="grid">
        <div id="main" class="grid__col col-12@m u-pt-no u-pb-no">
            {{ 
                onsBreadcrumb({
                    "ariaLabel": 'Breadcrumb',
                    "itemsList": [
                        {
                            "url": '/prototypes/sm-categorisation/version-5/00-surveys-list.html',
                            "text": 'Surveys'
                        },
                        {
                            "url": '/prototypes/sm-categorisation/version-5/01-message-categories.html',
                            "text": 'Help'
                        },
                        {
                            "url": '/prototypes/sm-categorisation/version-5/20-category/00-category-list.html',
                            "text": 'Information about the survey'
                        },
                        {
                            "url": '/prototypes/sm-categorisation/version-5/20-category/10-category-send-message.html',
                            "text": 'How was my business selected?'
                        },
                        {
                            "url": '/',
                            "text": 'Send message',
                            "current": true
                        }
                    ]
                }) 
            }}
        </div>
        <div class="grid__col col-8@m u-pt-no">
            <h1>Send a message</h1>
            <p>Ask us what you'd like to know and we'll get back to you.</p>
            {% from "components/metadata/_macro.njk" import onsMetadata %}
            {{
                onsMetadata({
                    "metadataLabel": "Message subject",
                    "termCol": "2",
                    "descriptionCol": "10",
                    "itemsList": [
                        {
                            "term": "Subject:",
                            "descriptions": [
                                {
                                    "description": "How was my business selected?"
                                }
                            ]
                        }
                    ]
                })
            }}
        </div>
        <div class="grid__col col-6@m">
            {{
                onsTextarea({
                    "id": "textarea",
                    "name": "feedback",
                    "label": {
                        "text": "Create message"
                    }
                })
            }}
            <p class="field">
                <div class="btn-group">
                    {{ 
                        onsButton({
                            "type": 'button',
                            "text": 'Send message',
                            "classes": 'btn-group__btn',
                            "url": "/prototypes/sm-categorisation/version-5/10-message-sent.html"
                        }) 
                    }}
                    {{ 
                        onsButton({
                            "type": 'button',
                            "text": 'Cancel',
                            "classes": 'btn--secondary btn-group__btn',
                            "url": "/prototypes/sm-categorisation/version-5/20-category/10-category-send-message.html"
                        }) 
                    }}
                </div>
            </p>
        </div>
    </div>

{% endblock %}
