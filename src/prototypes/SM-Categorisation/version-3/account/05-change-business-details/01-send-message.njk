---
group: Frontstage
title: User account creation
version: 20.0.3
layout: sm-categorisation/views/version-3/_master-survey
---

{% from "components/button/_macro.njk" import onsButton %}
{% from "components/radios/_macro.njk" import onsRadios %}
{% from "components/textarea/_macro.njk" import onsTextarea %}
{% from "components/metadata/_macro.njk" import onsMetadata %}
{% from "components/input/_macro.njk" import onsInput %}
{% from "components/breadcrumb/_macro.njk" import onsBreadcrumb %}

{% block main %}
    <div class="grid">
        <div id="main" class="grid__col col-12@m u-pt-no u-pb-no">
            {{ 
                onsBreadcrumb({
                    "ariaLabel": 'Breadcrumb',
                    "itemsList": [
                        {
                            "url": '/prototypes/sm-categorisation/version-3/00-surveys-list.html',
                            "text": 'Surveys'
                        },
                        {
                            "url": '/prototypes/sm-categorisation/version-3/30-my-account.html',
                            "text": 'Account'
                        },
                        {
                            "url": '/',
                            "text": 'Change business details',
                            "current": true
                        }
                    ]
                }) 
            }}
        </div>
        <div class="grid__col col-8@m u-pt-no">
            <h1>Send a secure message</h1>
            <p>Notify us of changes to the business details for the following surveys:</p>

            <h2 class="u-fs-m">ACME Consumer Products</h2>
            <div class="text-indent">
                <ul class="list list--bare">
                    <li>Quarterly Business Survey</li>
                    <li>Monthly Business Survey</li>
                </ul>
            </div> 
            <h2 class="u-fs-m">ACME Group Ltd</h2>
            <div class="text-indent">
                <ul class="list list--bare">
                    <li>Quarterly Business Survey</li>
                    <li>Monthly Business Survey</li>
                </ul>
            </div>

            <dl class="metadata metadata__list grid grid--gutterless u-cf u-mt-l" title="Subject" aria-label="subject">
                <dt class="metadata__term grid__col col-2@m">Subject:</dt>
                <dd class="metadata__value grid__col col-10@m">Change of business details of ACME Consumer Products and ACME Group Ltd</dd>
            </dl>

            <p class="field u-mt-no">
            {{
                onsTextarea({
                    "id": "textarea",
                    "name": "feedback",
                    "label": {
                        "text": "Create message"
                    }
                })
            }}
            </p>
            <p class="field">
                <div class="btn-group">
                    <button type="submit" class="btn" onclick="location.href='{{ pageInfo.rootPath }}/version-3/10-message-sent.html';">
                        <span class="btn__inner">Send</span>
                    </button>
                    <button type="submit" class="btn btn--secondary" onclick="location.href='{{ pageInfo.rootPath }}/version-3/30-my-account.html';">
                        <span class="btn__inner">Cancel</span>
                    </button>
                </div>
            </p>
        </div>
    </div>

{% endblock %}
