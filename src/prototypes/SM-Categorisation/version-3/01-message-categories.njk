---
group: Frontstage
title: SM Categorisation
version: 20.0.3
layout: sm-categorisation/views/version-3/_master-survey
---

{% from "components/button/_macro.njk" import onsButton %}
{% from "components/radios/_macro.njk" import onsRadios %}
{% from "components/breadcrumb/_macro.njk" import onsBreadcrumb %}

{% block main %}
    <div class="grid">
        <div id="main" class="grid__col col-12@m u-pt-no u-pb-no">
            {{ 
                onsBreadcrumb({
                    "ariaLabel": 'Breadcrumb',
                    "itemsList": [
                        {
                            "url": '/prototypes/sm-categorisation/version-3/00-surveys-list.html',
                            "text": 'Surveys'
                        },
                        {
                            "url": '/',
                            "text": 'Help',
                            "current": true
                        }
                    ]
                }) 
            }}
        </div>
        <div class="grid__col col-8@m u-pt-no">
            <h1>Help with this survey</h1>
            <form action="{{ pageInfo.parentPath }}/index.html">
                <p class="field">
                    <fieldset class="fieldset">
                        <legend class="fieldset__legend">Choose an option</legend>
                        <div class="radios__items">
                            <p class="radios__item">
                                <span class="radio">
                                    <input
                                    type="radio"
                                    id="answering-a-survey-question"
                                    data-action-url="{{ pageInfo.parentPath }}/10-category/00-send-message.html"
                                    class="radio__input js-radio"
                                    value="question-one"
                                    name="message-query">
                                    <label class="radio__label" for="answering-a-survey-question">Help answering a survey question</label>
                                </span>
                            </p>
                            <br>
                            <p class="radios__item">
                                <span class="radio">
                                    <input
                                    type="radio"
                                    id="information-about-the-survey"
                                    data-action-url="{{ pageInfo.parentPath }}/20-category/00-category-list.html"
                                    class="radio__input js-radio"
                                    value="question-two"
                                    name="message-query">
                                    <label class="radio__label" for="information-about-the-survey">Information about the survey</label>
                                </span>
                            </p>
                            <br>
                            <p class="radios__item">
                                <span class="radio">
                                    <input
                                    type="radio"
                                    id="my-contact-details-have-changed"
                                    data-action-url="{{ pageInfo.parentPath }}/30-category/00-category-list.html"
                                    class="radio__input js-radio"
                                    value="question--four"
                                    name="message-query">
                                    <label class="radio__label" for="my-contact-details-have-changed">Change who completes this survey</label>
                                </span>
                            </p>
                            <br>
                            <p class="radios__item">
                                <span class="radio">
                                    <input
                                    type="radio"
                                    id="my-email-address-has-changed"
                                    data-action-url="{{ pageInfo.parentPath }}/40-category/00-category-list.html"
                                    class="radio__input js-radio"
                                    value="question--five"
                                    name="message-query">
                                    <label class="radio__label" for="my-email-address-has-changed">My account details have changed</label>
                                </span>
                            </p>
                            <br>
                            <p class="field radios__item">
                                <span class="radio">
                                    <input
                                        type="radio"
                                        id="other-checkbox"
                                        data-action-url="{{ pageInfo.parentPath }}/60-category/00-send-message.html"
                                        class="radio__input js-radio "
                                        value="other" 
                                        name="message-query"
                                        aria-controls="other-checkbox-other-wrap"
                                        aria-haspopup="true">
                                    <label class="radio__label" for="other-checkbox">
                                            Something else
                                        </label>
                                </span>
                            </span>
                        </p>
                    </div>
                </fieldset>
            </p>
            <p class="field">
                <div class="btn-group">
                    <button type="submit" class="btn">
                        <span class="btn__inner">Continue</span>
                    </button>
                    {{ 
                            onsButton({
                                "type": 'button',
                                "text": 'Cancel',
                                "classes": 'btn--secondary btn-group__btn',
                                "url": "/prototypes/sm-categorisation/version-3/00-surveys-list.html"
                            }) 
                        }}
                </div>
            </p>
        </form>
    </div>
</div>

{% endblock %}
