{% from "components/button/_macro.njk" import onsButton %}
{% from "components/radios/_macro.njk" import onsRadios %}
{% from "components/textarea/_macro.njk" import onsTextarea %}
{% from "components/metadata/_macro.njk" import onsMetadata %}
{% from "components/breadcrumb/_macro.njk" import onsBreadcrumb %}

{% block main %}

    <div class="grid">
        <div id="main" class="grid__col col-12@m u-pt-no u-pb-no">
            {{ 
                onsBreadcrumb({
                    "ariaLabel": 'Breadcrumb',
                    "itemsList": [
                        {
                            "url": '/prototypes/user-self-serve/version-7/00-surveys-list.html',
                            "text": 'Surveys'
                        },
                        {
                            "url": '/prototypes/user-self-serve/version-7/01-message-categories.html',
                            "text": 'Help'
                        },
                        {
                            "url": '/prototypes/user-self-serve/version-7/option-1/option-list.html',
                            "text": 'Help completing this survey'
                        }
                    ]
                }) 
            }}
        </div>
        <div class="grid__col col-8@m u-pt-no">
            <h1>I do not have specific figures for a response</h1>
            <p>We do not expect you to spend any great expense or time obtaining the information required.</p>
            <p>We use the aggregated data we receive from all businesses to measure changes in the economy so we will accept informed estimates.</p>
            <p>Reporting a genuine zero return is as valid as any other figure as we are measuring business trends.</p>
            <h2>Did this answer your question?</h2>
            <p class="field">
                <div class="btn-group">
                {{ 
                    onsButton({
                        "type": 'button',
                        "text": 'Yes',
                        "classes": 'btn-group__btn',
                        "url": "/prototypes/user-self-serve/version-7/00-surveys-list.html"
                    }) 
                }}
                {{ 
                    onsButton({
                        "type": 'button',
                        "text": 'No',
                        "classes": 'btn--secondary btn-group__btn',
                        "url": "send-message.html"
                    }) 
                }}
                </div>
            </p>
        </div>
    </div>

{% endblock %}
