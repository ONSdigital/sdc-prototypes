{% block main %}

    <div class="grid">
        <div id="main" class="grid__col col-12@m u-pt-no u-pb-no">
            {{ 
                onsBreadcrumb({
                    "ariaLabel": 'Breadcrumb',
                    "itemsList": [
                        {
                            "url": '/prototypes/user-self-serve/version-7/00-surveys-list.html',
                            "text": 'Surveys'
                        },
                        {
                            "url": '/prototypes/user-self-serve/version-7/30-my-account.html',
                            "text": 'Account'
                        },
                        {
                            "url": '/prototypes/user-self-serve/version-7/account/04-transfer-my-surveys-1/index.html',
                            "text": 'Transfer surveys'
                        }
                    ]
                }) 
            }}
        </div>
        <div class="grid__col col-8@m u-pt-no">
            <h1>Select surveys to transfer</h1>

            {{
                onsCheckboxes({
                    "legend": "HEGGLES & STRUDRICK LIMITED",
                    "checkboxesLabel": "",
                    "name": "HEGGLES & STRUDRICK LIMITED",
                    "checkboxes": [
                        {
                            "id": "AIFDI",
                            "label": {
                                "text": "Annual Inward Foreign Direct Investment Survey"
                            },
                            "value": "AIFDI"
                        }
                    ]
                })
            }}
            <p class="field u-mt-l">
                <button type="submit" class="btn" onclick="location.href='{{ pageInfo.rootPath }}/version-7/account/04-transfer-my-surveys-1/02-email-address.html';">
                    <span class="btn__inner">Continue</span>
                </button>
                <button type="submit" class="btn btn--secondary" onclick="location.href='{{ pageInfo.rootPath }}/version-7/account/04-transfer-my-surveys-1/index.html';">
                    <span class="btn__inner">Cancel</span>
                </button>
            </p>

        </div>
    </div>

