---
group: Frontstage
title: E-commerce Survey
version: 35.0.3
layout: user-self-serve/views/version-9/_master-survey
---

{% block preMain %}
<div class="container">
    {{
        onsBreadcrumb({
            "ariaLabel": 'Previous',
            "itemsList": [
                {
                    "linkClasses": 'js-previous',
                    "url": pageInfo.parentPath,
                    "id": 'previous',
                    "text": 'Previous'
                }
            ]
        })
    }}
</div>
{% endblock %}
{% block main %}
    <div class="grid">
        <div id="main" class="grid__col col-8@m u-pt-no u-pb-no">
            <form action="{{ pageInfo.rootPath }}/version-9/signed-in/survey/ict-specialists-and-skills/recruit-specialists/index.html">
            {% call onsQuestion({
                "legendIsQuestionTitle": true,
                "classes": 'u-mt-no',
                "title": 'During 2020, did the business provide any type of training to develop ICT or IT related skill of its employees?'
            }) %}
                {{
                    onsCheckboxes({
                        "dontWrap": true,
                        "checkboxesLabel": "Select all that apply",
                        "name": "mutually-exclusive",
                        "checkboxes": [
                            {
                                "id": "training-ict",
                                "label": {
                                    "text": "Training for ICT or IT specialists"
                                },
                                "value": "training-ict"
                            },
                            {
                                "id": "training-other",
                                "label": {
                                    "text": "Training for other employees"
                                },
                                "value": "training-other"
                            }
                        ],
                        "mutuallyExclusive": {
                            "or": "Or",
                            "deselectMessage": "Selecting this will uncheck all other checkboxes",
                            "deselectGroupAdjective": "deselected",
                            "deselectCheckboxAdjective": "deselected",
                            "checkbox": {
                                "id": "no-training",
                                "label": {
                                    "text": "No training provided"
                                },
                                "value": "no-training"
                            }
                        }
                    })
                }}
            {% endcall %}
            {{ onsButton({
                "text": "Save and continue",
                "classes": "u-mt-xl"
            }) }}
            </form>
            <p class="u-mt-xl"><a href="{{ pageInfo.rootPath }}/version-9/signed-in/survey/hub/ict/ict-partial/index.html">Choose another section and return to this later</a></p>
        </div>
    </div>

{% endblock %}
