---
group: Frontstage
title: E-commerce Survey
version: 35.0.3
layout: user-self-serve/views/version-9/_master-survey
---

{% block preMain %}
<div class="container">
    {{
        onsBreadcrumb({
            "ariaLabel": 'Previous',
            "itemsList": [
                {
                    "classes": 'js-previous',
                    "url": pageInfo.parentPath,
                    "id": 'previous',
                    "text": 'Previous'
                }
            ]
        })
    }}
</div>
{% endblock %}
{% block main %}
    <div class="grid">
        <div id="main" class="grid__col col-8@m u-pt-no u-pb-no">
            <form action="{{ pageInfo.rootPath }}/version-9/signed-in/survey/ict-specialists-and-skills/ict-vacancies/index.html">

            {% call onsQuestion({
                "legendIsQuestionTitle": true,
                "classes": 'u-mt-no',
                "title": 'During 2020, did <em class="highlight">ACME Consumer Products</em> recruit or try to recruit ICT or IT specialists?'
            }) %}
                {{
                    onsRadios({
                        "name": "employ-specialists",
                        "dontWrap": true,
                        "radios": [
                            {
                                "id": "yes",
                                "label": {
                                    "text": "Yes"
                                },
                                "value": "yes"
                            },
                            {
                                "id": "no",
                                "label": {
                                    "text": "No"
                                },
                                "value": "no"
                            }
                        ]
                    })
                }}
            {% endcall %}
            {{ onsButton({
                "text": "Save and continue",
                "classes": "u-mt-xl"
            }) }}
            </form>
            <p class="u-mt-xl"><a href="{{ pageInfo.rootPath }}/version-9/signed-in/survey/hub/ict/ict-partial/index.html">Choose another section and return to this later</a></p>
        </div>
    </div>

{% endblock %}
