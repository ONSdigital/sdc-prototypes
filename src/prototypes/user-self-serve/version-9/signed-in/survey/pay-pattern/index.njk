{% block main %}
    <form action="{{ pageInfo.parentPath }}/hub/index.html">

    {% call onsQuestion({
        "legendIsQuestionTitle": true,
        "title": "How frequently are employees paid?",
        "description": "<p>You will be asked to provide information for each of the selected pay patterns.</p>"
    }) %}
        {{
            onsCheckboxes({
                "checkboxesLabel": "Select all that apply",
                "dontWrap": true,
                "name": "devices",
                "checkboxes": [
                    {
                        "id": "weekly",
                        "label": {
                            "text": "Weekly"
                        },
                        "value": "weekly"
                    },
                    {
                        "id": "fortnightly",
                        "label": {
                            "text": "Fortnightly"
                        },
                        "value": "fortnightly"
                    },
                    {
                        "id": "calendar-monthly",
                        "label": {
                            "text": "Calendar monthly"
                        },
                        "value": "calendar-monthly"
                    },
                    {
                        "id": "four-weekly",
                        "label": {
                            "text": "Four weekly"
                        },
                        "value": "four-weekly"
                    },
                    {
                        "id": "five-weekly",
                        "label": {
                            "text": "Five weekly"
                        },
                        "value": "five-weekly"
                    }
                ]
            })
        }}
    {% endcall %}
    {{ onsButton({
        "text": "Save and continue",
        "classes": "u-mt-xl"
    }) }}
    </form>

{% endblock %}
