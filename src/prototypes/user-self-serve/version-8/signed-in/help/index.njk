---
group: Frontstage
title: User self serve
version: 30.0.0
layout: user-self-serve/views/version-8/_master-survey
---

{% from "components/button/_macro.njk" import onsButton %}
{% from "components/radios/_macro.njk" import onsRadios %}
{% from "components/breadcrumb/_macro.njk" import onsBreadcrumb %}

{% block main %}
    <div class="grid">
        <div id="main" class="grid__col col-12@m u-pt-no u-pb-no">
            {{ 
                onsBreadcrumb({
                    "ariaLabel": 'Breadcrumb',
                    "itemsList": [
                        {
                            "url": '/prototypes/user-self-serve/version-8/signed-in/00-surveys-list.html',
                            "text": 'Surveys'
                        }
                    ]
                }) 
            }}
        </div>
        <div class="grid__col col-8@m u-pt-no">
            <h1>Help</h1>
            <form action="{{ pageInfo.parentPath }}/index.html">
                <p class="field">
                    <fieldset class="fieldset">
                        <legend class="fieldset__legend">Choose an option</legend>
                        <div class="radios__items">
                            <p class="radios__item">
                                <span class="radio">
                                    <input
                                    type="radio"
                                    id="option-1"
                                    data-action-url="{{ pageInfo.parentPath }}/help/option-1/option-list.html"
                                    class="radio__input js-radio"
                                    value="question-one"
                                    name="message-query">
                                    <label class="radio__label" for="option-1">Help completing this survey</label>
                                </span>
                            </p>
                            <br>
                            <p class="radios__item">
                                <span class="radio">
                                    <input
                                    type="radio"
                                    id="option-2"
                                    data-action-url="{{ pageInfo.parentPath }}/help/option-2/option-list.html"
                                    class="radio__input js-radio"
                                    value="question-two"
                                    name="message-query">
                                    <label class="radio__label" for="option-2">Information about the Monthly Business Survey</label>
                                </span>
                            </p>
                            <!-- <br>
                            <p class="radios__item">
                                <span class="radio">
                                    <input
                                    type="radio"
                                    id="option-3"
                                    data-action-url="{{ pageInfo.parentPath }}/help/option-3/option-list.html"
                                    class="radio__input js-radio"
                                    value="question--four"
                                    name="message-query">
                                    <label class="radio__label" for="option-3">Change who completes this survey</label>
                                </span>
                            </p> -->
                            <br>
                            <p class="radios__item">
                                <span class="radio">
                                    <input
                                    type="radio"
                                    id="option-3"
                                    data-action-url="{{ pageInfo.parentPath }}/help/option-3/option-list.html"
                                    class="radio__input js-radio"
                                    value="question--three"
                                    name="message-query">
                                    <label class="radio__label" for="option-3">Information about the ONS</label>
                                </span>
                            </p>
                            <br>
                            <p class="radios__item">
                                <span class="radio">
                                    <input
                                    type="radio"
                                    id="option-4"
                                    data-action-url="{{ pageInfo.parentPath }}/account/index.html"
                                    class="radio__input js-radio"
                                    value="question--four"
                                    name="message-query">
                                    <label class="radio__label" for="option-4">Help with my account</label>
                                </span>
                            </p>
                            <br>
                            <p class="field radios__item">
                                <span class="radio">
                                    <input
                                        type="radio"
                                        id="option-6"
                                        data-action-url="{{ pageInfo.parentPath }}/help/option-6/index.html"
                                        class="radio__input js-radio "
                                        value="other" 
                                        name="message-query"
                                        aria-controls="option-6-other-wrap"
                                        aria-haspopup="true">
                                    <label class="radio__label" for="option-6">
                                            Something else
                                        </label>
                                </span>
                            </span>
                        </p>
                    </div>
                </fieldset>
            </p>
            <p class="field">
                <div class="btn-group">
                    <button type="submit" class="btn">
                        <span class="btn__inner">Continue</span>
                    </button>
                    {{ 
                            onsButton({
                                "type": 'button',
                                "text": 'Cancel',
                                "classes": 'btn--secondary btn-group__btn',
                                "url": "/prototypes/user-self-serve/version-8/signed-in/00-surveys-list.html"
                            }) 
                        }}
                </div>
            </p>
        </form>
    </div>
</div>

{% endblock %}
