---
group: RAS/RM - Frontstage
title: E-commerce Survey
version: 35.0.3
layout: user-self-serve/views/version-10/_master-survey-question
---

{% block preMain %}
<div class="container">
    {{
        onsBreadcrumb({
            "ariaLabel": 'Previous',
            "itemsList": [
                {
                    "linkClasses": 'js-previous',
                    "url": pageInfo.parentPath + '/index.html',
                    "id": 'previous',
                    "text": 'Previous'
                }
            ]
        })
    }}
</div>
{% endblock %}
{% block main %}
    <div class="grid">
        <div id="main" class="grid__col col-8@m u-pt-no u-pb-no">
            <form action="{{ pageInfo.rootPath }}/version-10/signed-in/survey/hub/index.html">

            {% call onsQuestion({
                "legendIsQuestionTitle": true,
                "classes": 'u-mt-no',
                "title": 'Does <em class="highlight">ACME Consumer Products</em> have a website, either its own or third party?'
            }) %}
                {% call onsPanel({
                    "classes": 'u-mb-m'
                }) %}
                    <p><strong>Exclude</strong> any online directory listings</p>
                {% endcall %}
                {{
                    onsRadios({
                        "name": "website",
                        "dontWrap": true,
                        "radios": [
                            {
                                "id": "yes",
                                "label": {
                                    "text": "Yes"
                                },
                                "value": "yes"
                            },
                            {
                                "id": "no",
                                "label": {
                                    "text": "No"
                                },
                                "value": "no"
                            }
                        ]
                    })
                }}
            {% endcall %}
            {{ onsButton({
                "id": "js-continue",
                "text": "Save and continue",
                "classes": "u-mt-xl"
            }) }}
            </form>
            <p class="u-mt-xl"><a href="{{ pageInfo.rootPath }}/version-10/signed-in/survey/hub/index.html" id="js-return-later">Choose another section and return to this later</a></p>
        </div>
    </div>
    <script>
        var returnLaterLink = document.getElementById('js-return-later');
        var continueButton = document.getElementById('js-continue');

        returnLaterLink.onclick = function setSectionStatus() {
            var newSectionStatus = new Object();

            newSectionStatus.bookmark = window.location.pathname;
            newSectionStatus.status = "started";

            if(sessionStorage.sectionThree) {
                sessionStorage.removeItem('sectionThree');
                sectionThree = JSON.parse(sessionStorage.getItem('sectionThree'));
            } else {
                sectionThree = [];
            }
            var sectionThree = newSectionStatus;

            sessionStorage.setItem('sectionThree', JSON.stringify(sectionThree));
        }

        continueButton.onclick = function sectionComplete() {

            var newSectionStatus = new Object();

            newSectionStatus.bookmark = '';
            newSectionStatus.status = "complete";

            var sectionThree = newSectionStatus;

            sessionStorage.setItem('sectionThree', JSON.stringify(sectionThree));
        }
    </script>
{% endblock %}
