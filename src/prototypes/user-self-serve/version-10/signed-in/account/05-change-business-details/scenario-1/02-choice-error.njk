---
group: RAS/RM - Frontstage
title: User self serve
version: 35.0.3
layout: user-self-serve/views/version-10/_master-surveys-account
---

{% from "components/input/_macro.njk" import onsInput %}
{% from "components/checkboxes/_macro.njk" import onsCheckboxes %}
{% from "components/breadcrumb/_macro.njk" import onsBreadcrumb %}

{% block main %}

    <div class="grid">
        <div id="main" class="grid__col col-12@m u-pt-no u-pb-no">
            {{ 
                onsBreadcrumb({
                    "ariaLabel": 'Breadcrumb',
                    "itemsList": [
                        {
                            "url": '/prototypes/user-self-serve/version-10/signed-in/00-surveys-list.html',
                            "text": 'Surveys'
                        },
                        {
                            "url": '/prototypes/user-self-serve/version-10/signed-in/account/index.html',
                            "text": 'Account'
                        } 
                    ]
                }) 
            }}
        </div>
        <div class="grid__col col-8@m u-pt-no">

            <div aria-labelledby="error-summary-title" role="alert" tabindex="-1" autofocus="autofocus" class="panel panel--error u-mb-l">
                <div class="panel__header">
                    <h2 id="error-summary-title" data-qa="error-header" class="panel__title u-fs-r--b">There is a problem with your answer</h2>
                </div>
                <div class="panel__body">
                    <ol class="list">
                        <li class="list__item ">
                            <a href="#option-error" class="list__link js-inpagelink">Enter a answer</a>
                        </li>
                    </ol>
                </div>
            </div>

            <h1>Why do you need to change your business details?</h1>
            <form action="{{ pageInfo.parentPath }}/02-choice-error.html">

                <div class="panel panel--error panel--no-title u-mb-s" id="option-error">
                    <span class="u-vh">Error: </span>
                    <div class="panel__body">

                        <p class="panel__error">
                            <strong>You need to choose an answer</strong>
                        </p>

                        <p class="field">
                            <fieldset class="fieldset">
                                <legend class="fieldset__legend">Choose an option</legend>
                                <div class="radios__items">
                                    <p class="radios__item">
                                        <span class="radio">
                                            <input
                                        type="radio"
                                        id="change-business-details"
                                        data-action-url="/prototypes/user-self-serve/version-10/signed-in/account/05-change-business-details/scenario-1/option-1/index.html"
                                        class="radio__input js-radio"
                                        value="question-two"
                                        name="message-query">
                                            <label class="radio__label" for="change-business-details">My business is winding down or liquidating</label>
                                        </span>
                                    </p>
                                    <br>
                                    <p class="radios__item">
                                        <span class="radio">
                                            <input
                                        type="radio"
                                        id="access-to-my-surveys"
                                        data-action-url="/prototypes/user-self-serve/version-10/signed-in/account/05-change-business-details/scenario-1/option-2/index.html"
                                        class="radio__input js-radio"
                                        value="question-three"
                                        name="message-query">
                                            <label class="radio__label" for="access-to-my-surveys">My business is dormant</label>
                                        </span>
                                    </p>
                                    <br>
                                    <p class="radios__item">
                                        <span class="radio">
                                            <input
                                        type="radio"
                                        id="transfer-my-surveys"
                                        data-action-url="/prototypes/user-self-serve/version-10/signed-in/account/05-change-business-details/scenario-1/option-3/index.html"
                                        class="radio__input js-radio"
                                        value="question-four"
                                        name="message-query">
                                            <label class="radio__label" for="transfer-my-surveys">My business is subject to a takeover</label>
                                        </span>
                                    </p>
                                    <br>
                                    <p class="radios__item">
                                        <span class="radio">
                                            <input
                                        type="radio"
                                        id="change-contact-details"
                                        data-action-url="/prototypes/user-self-serve/version-10/signed-in/account/05-change-business-details/scenario-1/03-change-business-details.html"
                                        class="radio__input js-radio"
                                        value="question-one"
                                        name="message-query">
                                            <label class="radio__label" for="change-contact-details">My business details are incorrect</label>
                                        </span>
                                    </p>
                                </div>
                            </fieldset>
                        </p>

                    </div>
                </div>
                <div class="grid grid--flex grid--gutterless grid--vertical-center grid--no-wrap@s u-mt-m u-mb-m">
                    <div class="grid__col">
                        <button type="submit" class="btn btn-group__btn">
                            <span class="btn__inner">Continue</span>
                        </button>

                    </div>
                    <div class="grid__col u-ml-m">
                        <a href="/prototypes/user-self-serve/version-10/signed-in/00-surveys-list.html">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

{% endblock %}
