{% extends "page-templates/_template.njk" %}

{% block head %}
    <link rel="stylesheet" href="{{ pageInfo.rootPath }}/version-10/styles.css"/>
{% endblock %}

{% set pageConfig = { 
    "cdn": {
        "version": '35.0.3'
    },
    "title": 'ONS Business surveys',
    "header": {
        "logoAlt": "ONS",
        "logoHref": "/prototypes/user-self-serve/version-10/index.html"
    },
    "serviceLinks": {
        "classes": "header-service-nav--internal u-mr-s",
        "ariaLabel": "Site services menu",
        "ariaListLabel": "Navigation menu",
        "itemsList": [
            {
                "text": "Sign out",
                "url": "/prototypes/user-self-serve/version-10/index.html"
            }
        ]} 
} %}

{% block preHeader %}
{% endblock %}
{% block pageContent %}
    {% block preMain %}{% endblock %}
    <div class="page__container container">
        <main id="main-content" class="page__main {{ pageClasses }}">
            {% block main %}{% endblock %}
        </main>
    </div>
{% endblock %}

{% block footer %}
