{% block main %}

    <div class="grid">
        <div id="main" class="grid__col col-12@m u-pt-no u-pb-no">
            {{ 
                onsBreadcrumb({
                    "ariaLabel": 'Breadcrumb',
                    "itemsList": [
                        {
                            "url": '/prototypes/user-account-creation/version-2/00-surveys-list.html',
                            "text": 'Surveys'
                        },
                        {
                            "url": '/prototypes/user-account-creation/version-2/30-my-account.html',
                            "text": 'Account'
                        },
                        {
                            "url": '/',
                            "text": 'Choose surveys',
                            "current": true
                        }
                    ]
                }) 
            }}
        </div>
        <div class="grid__col col-8@m u-pt-no">
            <h1>Which surveys do you want to share?</h1>
            <p class="field">
            {{ 
                onsCheckboxes({
                    "legend": "ACME Consumer Products",
                    "checkboxesLabel": "Select all that apply",
                    "name": "food",
                    "checkboxes": [
                        {
                            "id": "MBS",
                            "label": {
                                "text": "Monthly Business Survey"
                            },
                            "value": "mbs"
                        },
                        {
                            "id": "QBS",
                            "label": {
                                "text": "Quarterly Business Survey"
                            },
                            "value": "QBS"
                        }
                    ]
                }) 
            }}
            </p>
            <p class="field">
            {{ 
                onsCheckboxes({
                    "legend": "ACME Group Ltd",
                    "checkboxesLabel": "Select all that apply",
