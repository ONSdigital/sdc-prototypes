---
group: Frontstage
title: User account creation
version: 20.0.3
layout: user-account-creation/views/version-4/_master
---

{% from "components/input/_macro.njk" import onsInput %}
{% from "components/breadcrumb/_macro.njk" import onsBreadcrumb %}
{% from "components/button/_macro.njk" import onsButton %}


{% block main %}

    <div class="grid">
        <div id="main" class="grid__col col-12@m u-pt-no u-pb-no">
            {{ 
                onsBreadcrumb({
                    "ariaLabel": 'Breadcrumb',
                    "itemsList": [
                        {
                            "url": '/prototypes/user-account-creation/version-4/00-surveys-list.html',
                            "text": 'Surveys'
                        },
                        {
                            "url": '/prototypes/user-account-creation/version-4/30-my-account.html',
                            "text": 'Account'
                        },
                        {
                            "url": '/',
                            "text": 'Confirm survey access',
                            "current": true
                        }
                    ]
                }) 
            }}
        </div>
        <div class="grid__col col-8@m u-pt-no">
            <h1>Confirm survey access</h1>

            <p>[Someone] has requested to share access to the following surveys with you.</p>
            

            <h2 class="u-fs-m">ACME Consumer Products</h2>
            <div class="text-indent">
                <ul class="list list--bare">
                    <li>Quarterly Business Survey</li>
                    <li>Monthly Business Survey</li>
                </ul>
            </div> 
            <h2 class="u-fs-m">ACME Group Ltd</h2>
            <div class="text-indent">
                <ul class="list list--bare">
                    <li>Business Register and Employment Survey</li>
                </ul>
            </div>
            <p class="u-mt-l">If you confirm you will be able to complete and return them on behalf of [your business].</p>

            <form action="{{ pageInfo.parentPath }}/account/index.html">
                <p class="field">
                    <fieldset class="fieldset">
                        <legend class="fieldset__legend">Choose an option</legend>
                        <div class="radios__items">
                            <p class="radios__item">
                                <span class="radio">
                                    <input
                                        type="radio"
                                        id="yes"
                                        data-action-url="/prototypes/user-account-creation/version-4/account/03-share-access-to-my-surveys/06-shared-surveys-complete.html"
                                        class="radio__input js-radio"
                                        value="yes"
                                        name="confirm">
                                    <label class="radio__label" for="yes">Yes</label>
                                </span>
                            </p>
                            <br>
                            <p class="radios__item">
                                <span class="radio">
                                    <input
                                        type="radio"
                                        id="no"
                                        data-action-url="/prototypes/user-account-creation/version-4/account/03-share-access-to-my-surveys/07-shared-surveys-denied.html"
                                        class="radio__input js-radio"
                                        value="no"
                                        name="confirm">
                                    <label class="radio__label" for="no">No</label>
                                </span>
                            </p>
                        </div>
                    </fieldset>
                </p>

                <div class="grid grid--flex grid--gutterless grid--vertical-center grid--no-wrap@s u-mt-m u-mb-m">
                    <div class="grid__col">
                        <button type="button" class="btn btn-group__btn">
                            <span class="btn__inner">Continue</span>
                        </button>
                    </div>
                    <div class="grid__col u-ml-m">
                        <a href="/prototypes/user-account-creation/version-4/00-surveys-list.html">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

{% endblock %}
