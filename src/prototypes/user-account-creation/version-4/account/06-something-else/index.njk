---
group: Frontstage
title: User account creation
version: 20.0.3
layout: user-account-creation/views/version-4/_master-survey
---

{% from "components/button/_macro.njk" import onsButton %}
{% from "components/radios/_macro.njk" import onsRadios %}
{% from "components/textarea/_macro.njk" import onsTextarea %}
{% from "components/metadata/_macro.njk" import onsMetadata %}
{% from "components/input/_macro.njk" import onsInput %}
{% from "components/breadcrumb/_macro.njk" import onsBreadcrumb %}

{% block main %}

    <div class="grid">
        <div id="main" class="grid__col col-12@m u-pt-no u-pb-no">
            {{ 
                onsBreadcrumb({
                    "ariaLabel": 'Breadcrumb',
                    "itemsList": [
                        {
                            "url": '/prototypes/user-account-creation/version-4/00-surveys-list.html',
                            "text": 'Surveys'
                        },
                        {
                            "url": '/prototypes/user-account-creation/version-4/30-my-account.html',
                            "text": 'Account'
                        },
                        {
                            "url": '/',
                            "text": 'Send a message',
                            "current": true
                        }
                    ]
                }) 
            }}
        </div>
        <div class="grid__col col-8@m u-pt-no">
            <h1>Send a message</h1>
            <p>Send us a message with a description of your issue and we'll get back to you.</p>
            {% from "components/metadata/_macro.njk" import onsMetadata %}
            {{
                onsMetadata({
                    "metadataLabel": "This is an example of the metadata component",
                    "termCol": "2",
                    "descriptionCol": "10",
                    "itemsList": [
                        {
                            "term": "Subject:",
                            "descriptions": [
                                {
                                    "description": "My account"
                                }
                            ]
                        }
                    ]
                })
            }}
            <p class="field">
        
            {{
                onsTextarea({
                    "id": "textarea",
                    "name": "feedback",
                    "label": {
                        "text": "Create message"
                    }
                })
            }}
            </p>
            <p class="field">
                <div class="btn-group">
                    <button type="submit" class="btn" onclick="location.href='{{ pageInfo.rootPath }}/version-4/10-message-sent.html';">
                        <span class="btn__inner">Send</span>
                    </button>
                    <button type="submit" class="btn btn--secondary" onclick="location.href='{{ pageInfo.rootPath }}/version-4/30-my-account.html';">
                        <span class="btn__inner">Cancel</span>
                    </button>
                </div>
            </p>
        </div>
    </div>

{% endblock %}
