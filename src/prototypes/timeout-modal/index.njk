---
title: modal v1
group: Session timeout
version: 32.2.4
layout: timeout-modal/views/_question
---
{% from "components/question/_macro.njk" import onsQuestion %}
{% from "components/button/_macro.njk" import onsButton %}
{% from "components/input/_macro.njk" import onsInput %}
{% from "components/radios/_macro.njk" import onsRadios %}
{% from "components/panel/_macro.njk" import onsPanel %}
    {% block main %}
        {% call onsQuestion({
            "title": "What is your sex?"
        }) %}
           {% call onsPanel({
            }) %}
                <p>A question about gender will follow</p>
            {% endcall %}

            {{ onsRadios({
                "id": "do-you-live",
                "name": "do-you-live",
                "classes": "js-radios",
                "radios": [
                    {
                        "id": "female",
                        "label": {
                            "text": "Female"
                        }
                    },
                    {
                        "id": "male",
                        "label": {
                            "text": "Male"
                        }
                    }
                ]
            }) }}
        {% endcall %}

        {{ onsButton({
            "text": "Save and continue",
            "classes": "u-ml-no u-mt-xl u-mb-xl"
        }) }}

    {% endblock %}

    {% block bodyEnd %}
        <dialog class="timeout-warning js-timeout-warning"
            id="dialog"
            data-server-timeout-time="{{ params.serverTimeoutTime }}"
            data-server-update-url="{{ params.serverUpdateUrl }}"
            data-show-modal="{{ params.showModal }}"
            data-redirect-url="{{ params.redirectUrl }}"
            role="dialog"
            aria-labelledby="timeout-warning-title"
            aria-describedby="timeout-time-remaining">
            <h1 id="timeout-warning-title" class="timeout-warning__title">
                You will be signed out soon
            </h1>
            <div class="timeout-warning__body">
                <p>You've been inactive for a while.<p>
                <p class="timeout-warning__timer js-timer" aria-hidden="true" aria-relevant="additions"></p>
                <p class="timeout-warning__timer-acc js-timer-acc u-vh" role="status" id="timeout-time-remaining"></p>
            </div>
            {{ onsButton({
                "text": "Continue survey",
                "classes": "js-continue-btn"
            }) }}
        </dialog>
        <script src="{{ pageInfo.rootPath }}/scripts/index.js"></script>
    {% endblock %}
