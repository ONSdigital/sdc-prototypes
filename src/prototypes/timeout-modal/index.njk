---
title: Timeout modal v1
group: Session timeout
version: 32.2.4
layout: timeout-modal/views/_question
---
{% from "components/question/_macro.njk" import onsQuestion %}
{% from "components/button/_macro.njk" import onsButton %}
{% from "components/input/_macro.njk" import onsInput %}
{% from "components/radios/_macro.njk" import onsRadios %}
{% from "components/panel/_macro.njk" import onsPanel %}
{% from "timeout-modal/components/timeout-modal/_macro.njk" import onsTimeOutModal %}

    {% block main %}
        {% call onsQuestion({
            "title": "What is your sex?"
        }) %}
           {% call onsPanel({
            }) %}
                <p>A question about gender will follow</p>
            {% endcall %}

            {{ onsRadios({
                "id": "do-you-live",
                "name": "do-you-live",
                "classes": "js-radios",
                "radios": [
                    {
                        "id": "female",
                        "label": {
                            "text": "Female"
                        }
                    },
                    {
                        "id": "male",
                        "label": {
                            "text": "Male"
                        }
                    }
                ]
            }) }}
        {% endcall %}

        {{ onsButton({
            "text": "Save and continue",
            "classes": "u-ml-no u-mt-xl u-mb-xl"
        }) }}

    {% endblock %}

    {% block bodyEnd %}

        {{ onsTimeOutModal({
            "serverTimeoutTime": 0.4,
            "displayModalSeconds": 20,
            "redirectUrl": "/prototypes/timeout-modal/time-out.html",
            "title": "You will be signed out soon",
            "textFirstLine": "It appears you have been inactive for a while.",
            "textSecondLine": "To protect your information, your progress will be saved and you will be signed out in",
            "btnText": "Continue survey"
        }) }}

        <script src="{{ pageInfo.rootPath }}/scripts/index.js"></script>
    {% endblock %}
