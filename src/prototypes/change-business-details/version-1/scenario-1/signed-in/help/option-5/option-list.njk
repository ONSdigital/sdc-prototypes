---
group: RAS/RM - Frontstage
title: Change business details
version: 32.0.1
layout: change-business-details/views/version-1/scenario-1/_master-survey
---

{% from "components/button/_macro.njk" import onsButton %}
{% from "components/radios/_macro.njk" import onsRadios %}
{% from "components/breadcrumb/_macro.njk" import onsBreadcrumb %}

{% block main %}
    <div class="grid">
        <div id="main" class="grid__col col-12@m u-pt-no u-pb-no">
            {{ 
                onsBreadcrumb({
                    "ariaLabel": 'Breadcrumb',
                    "itemsList": [
                        {
                            "url": '/prototypes/change-business-details/version-1/scenario-1/signed-in/00-surveys-list.html',
                            "text": 'Surveys'
                        },
                        {
                            "url": '/prototypes/change-business-details/version-1/scenario-1/signed-in/help/index.html',
                            "text": 'Help'
                        }
                    ]
                }) 
            }}
        </div>
        <div class="grid__col col-8@m u-pt-no">
            <h1>I am having problems resetting my password</h1>
            <form action="{{ pageInfo.parentPath }}/index.html">
                <p class="field">
                    <fieldset class="fieldset">
                        <legend class="fieldset__legend">Choose an option</legend>
                        <div class="radios__items">
                            <p class="radios__item">
                                <span class="radio">
                                    <input
                                        type="radio"
                                        id="option-1"
                                        data-action-url="{{ pageInfo.parentPath }}/option-1/index.html"
                                        class="radio__input js-radio"
                                        value="option-1"
                                        name="message-query">
                                    <label class="radio__label" for="option-1">I haven't received the password reset email</label>
                                </span>
                            </p>
                            <br>
                            <p class="radios__item">
                                <span class="radio">
                                    <input
                                        type="radio"
                                        id="option-2"
                                        data-action-url="{{ pageInfo.parentPath }}/option-2/index.html"
                                        class="radio__input js-radio"
                                        value="option-2"
                                        name="message-query">
                                    <label class="radio__label" for="option-2">My new password isn't being accepted</label>
                                </span>
                            </p>
                            <br>
                            <p class="radios__item">
                                <span class="radio">
                                    <input
                                        type="radio"
                                        id="option-3"
                                        data-action-url="{{ pageInfo.parentPath }}/option-3/index.html"
                                        class="radio__input js-radio"
                                        value="option-3"
                                        name="message-query">
                                    <label class="radio__label" for="option-3">I cannot reset my password using the link</label>
                                </span>
                            </p>
                            <br>
                            <p class="radios__item">
                                <span class="radio">
                                    <input
                                        type="radio"
                                        id="other"
                                        data-action-url="{{ pageInfo.parentPath }}/option-4/index.html"
                                        class="radio__input js-radio "
                                        value="other" 
                                        name="message-query"
                                        aria-controls="other-wrap" aria-haspopup="true">
                                        <label class="radio__label" for="other">
                                            Something else
                                        </label>
                                </span>
                            </p>
                        </div>
                    </fieldset>
                </p>

                <div class="grid grid--flex grid--gutterless grid--vertical-center grid--no-wrap@s u-mt-m u-mb-m">
                    <div class="grid__col">
                        <button type="submit" class="btn btn-group__btn">
                            <span class="btn__inner">Continue</span>
                        </button>
                    </div>
                    <div class="grid__col u-ml-m">
                        <a href="/prototypes/change-business-details/version-1/scenario-1/signed-in/help/index.html">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <script>
        var submit = document.getElementById('btnFormSubmit');
        submit.addEventListener('click', submitForm);

        function submitForm(event) {
            event.preventDefault();
            event.stopPropagation();

            var href = '',
                inputs = this
                    .parentNode
                    .getElementsByTagName('input')
            for (var i = 0; i < inputs.length; i++) {
                if (inputs[i].getAttribute('name') == 'button' && inputs[i].checked) {
                    href = inputs[i].getAttribute('data-href');
                    window.location = href;
                }
            }
        }
    </script>

{% endblock %}
