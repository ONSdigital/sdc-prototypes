group: Frontstage
title: Change business details
version: 32.0.1
layout: change-business-details/views/version-1/_master-survey
---

{% from "components/input/_macro.njk" import onsInput %}
{% from "components/breadcrumb/_macro.njk" import onsBreadcrumb %}
{% from "components/checkboxes/_macro.njk" import onsCheckboxes %}

{% block main %}

    <div class="grid">
        <div id="main" class="grid__col col-12@m u-pt-no u-pb-no">
            {{ 
                onsBreadcrumb({
                    "ariaLabel": 'Breadcrumb',
                    "itemsList": [
                        {
                            "url": '/prototypes/change-business-details/version-1/signed-in/00-surveys-list.html',
                            "text": 'Surveys'
                        },
                        {
                            "url": '/prototypes/change-business-details/version-1/signed-in/account/index.html',
                            "text": 'Account'
                        },
                        {
                            "url": '/prototypes/change-business-details/version-1/signed-in/account/03-share-access-to-my-surveys/index.html',
                            "text": 'Share surveys'
                        }
                    ]
                }) 
            }}
        </div>
        <div class="grid__col col-8@m u-pt-no">
            <h1>For which businesses do you want to share your surveys?</h1>
            {{
                onsCheckboxes({
                    "legend": "Select all businesses that apply",
                    "name": "food",
                    "checkboxes": [
                        {
                            "id": "1",
                            "label": {
                                "text": "ACME Consumer Products"
                            },
                            "value": "1"
                        },
                        {
                            "id": "2",
                            "label": {
                                "text": "ACME Group Ltd"
                            },
                            "value": "2"
                        }
                    ]
                })
            }}


            <div class="grid grid--flex grid--gutterless grid--vertical-center grid--no-wrap@s u-mt-m u-mb-m">
                <div class="grid__col">
                    <button type="button" class="btn btn-group__btn" onclick="location.href='{{ pageInfo.rootPath }}/version-1/signed-in/account/03-share-access-to-my-surveys/01-select-surveys.html';">
                        <span class="btn__inner">Continue</span>
                    </button>
                </div>
                <div class="grid__col u-ml-m">
                    <a href="/prototypes/change-business-details/version-1/signed-in/account/03-share-access-to-my-surveys/index.html">Cancel</a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
