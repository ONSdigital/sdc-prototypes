---
group: Frontstage
title: Change business details
version: 32.0.1
layout: change-business-details/views/version-1/_master-survey
---

{% from "components/metadata/_macro.njk" import onsMetadata %}
{% from "components/button/_macro.njk" import onsButton %}
{% from "components/breadcrumb/_macro.njk" import onsBreadcrumb %}
{% from "components/textarea/_macro.njk" import onsTextarea %}

{% block main %}
    <div class="grid">
        <div id="main" class="grid__col col-12@m u-pt-no u-pb-no">
            {{ 
                onsBreadcrumb({
                    "ariaLabel": 'Breadcrumb',
                    "itemsList": [
                        {
                            "url": '/prototypes/user-self-serve/version-9/signed-in/00-surveys-list.html',
                            "text": 'Surveys'
                        }
                    ]
                }) 
            }}
        </div>
        <div class="grid__col col-8@m u-pt-no">
            <h1>The business is dormant</h1>
            <p>Choose an option and we will get back to you to arrange the change in business status.</p>
        </div>
        <div class="grid__col col-8@m">
             <form action="{{ pageInfo.parentPath }}/account/index.html">
                {% from "components/radios/_macro.njk" import onsRadios %}
                {{
                    onsRadios({
                        "legend": "Choose an option",
                        "name": "food",
                        "radios": [
                            {
                                "id": "This business has not started operating yet",
                                "label": {
                                    "text": "This business has not started operating yet"
                                },
                                "value": "This business has not started operating yet"
                            },
                            {
                                "id": "This business has ceased but is expected to restart in two years",
                                "label": {
                                    "text": "This business has ceased but is expected to restart in two years"
                                },
                                "value": "This business has ceased but is expected to restart in two years"
                            },
                            {
                                "id": "This business has ceased and is not expected to start within two years",
                                "label": {
                                    "text": "This business has ceased and is not expected to start within two years"
                                },
                                "value": "This business has ceased and is not expected to start within two years"
                            },
                            {
                                "id": "The business has never started operating and is not expected to start",
                                "label": {
                                    "text": "The business has never started operating and is not expected to start"
                                },
                                "value": "The business has never started operating and is not expected to start"
                            }
                        ]
                    })
                }}
        </div>
        <div class="grid__col col-6@m">
                <p class="field">
                    {{
                        onsTextarea({
                            "id": "textarea",
                            "name": "feedback",
                            "label": {
                                "text": "Enter message (optional)"
                            }
                        })
                    }}
                </p>
                <div class="grid grid--flex grid--gutterless grid--vertical-center grid--no-wrap@s u-mt-m u-mb-m">
                    <div class="grid__col">
                        <button type="submit" class="btn btn-group__btn">
                            <span class="btn__inner">Send message</span>
                        </button>

                    </div>
                    <div class="grid__col u-ml-m">
                        <a href="/prototypes/change-business-details/version-1/signed-in/account/05-change-business-details/change-business-status/index.html">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

{% endblock %}
