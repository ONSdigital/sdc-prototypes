                {{
                    onsTextarea({
                        "id": "textarea",
                        "name": "feedback",
                        "label": {
                            "text": "What happens to the employees?"
                        }
                    })
                }}
                <div class="grid grid--flex grid--gutterless grid--vertical-center grid--no-wrap@s u-mt-m u-mb-m">
                    <div class="grid__col">
                        <button type="submit" class="btn btn-group__btn">
                            <span class="btn__inner">Send message</span>
                        </button>

                    </div>
                    <div class="grid__col u-ml-m">
                        <a href="/prototypes/change-business-details/version-1/signed-in/account/05-change-business-details/change-business-status/index.html">Cancel</a>
