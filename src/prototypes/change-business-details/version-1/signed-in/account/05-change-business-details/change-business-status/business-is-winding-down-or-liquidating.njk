{% from "components/metadata/_macro.njk" import onsMetadata %}
{% from "components/button/_macro.njk" import onsButton %}
{% from "components/breadcrumb/_macro.njk" import onsBreadcrumb %}
{% from "components/textarea/_macro.njk" import onsTextarea %}

{% block main %}
    <div class="grid">
        <div class="grid__col col-8@m u-pt-no">
            <h1>The business is winding down or liquidating</h1>
            <p>Tell us what happens to the employees in a secure message and we will get back to you to arrange the change in business status.</p>
        </div>
        <div class="grid__col col-6@m">
                {{
                    onsTextarea({
                        "id": "textarea",
                        "name": "feedback",
                        "label": {
                            "text": "What happens to the employees?"
                        }
                    })
                }}
            <p class="field">
                <div class="btn-group">
                    {{ 
                        onsButton({
                            "type": 'button',
                            "text": 'Send message',
                            "classes": 'btn-group__btn',
                            "url": "/prototypes/change-business-details/version-1/signed-in/account/05-change-business-details/scenario-1/account-index-done.html"
                        }) 
                    }}
                    {{ 
                        onsButton({
                            "type": 'button',
                            "text": 'Cancel',
                            "classes": 'btn--secondary btn-group__btn',
                            "url": "/prototypes/change-business-details/version-1/signed-in/help/index.html"
                        }) 
                    }}
                </div>
            </p>
            </form>
        </div>
    </div>

{% endblock %}
