---
title: Get ready for Census 2021
group: Census
version: 26.0.3
layout: census-website-engage/views/_master
---

{% block pageContent %}

    {% block main %}

        <!-- Hero -->
        {{
            onsHero({
                censusTheme: true,
                censusThemeDark: true,
                title: 'Get ready for Census 2021',
                subtitle: 'Census Day will be Sunday 21 March 2021.',
                image: {
                    smallSrc: pageInfo.rootPath + '/img/small/',
                    largeSrc: pageInfo.rootPath + '/img/large/',
                    filename: 'woman-in-purple-dress-shirt.jpg',
                    alt: 'Woman in purple dress shirt using laptop'
                }
            })
        }}

        <!-- Page contents -->
        <div class="page__container container">

            <!-- CTAs -->
            <section class="u-pt-l u-mb-s u-bb u-pb-s u-pb-m@m">

                <div class="grid grid--column@xs@s">

                    <div class="grid__col col-4@m">
                        {{-
                            onsCard({
                                "ariaBy": 'Section highlight',
                                "id": 'title1',
                                "textId": 'text1',
                                "title": 'About the census',
                                "url": pageInfo.rootPath + '/about-the-census',
                                "text": 'The census is a survey that gives us information about all the households in England and Wales.'
                            })
                        }}
                    </div>

                    <div class="grid__col col-4@m">
                        {{-
                            onsCard({
                                "ariaBy": 'Section highlight',
                                "id": 'title2',
                                "textId": 'text2',
                                "title": 'Working on the census',
                                "url": pageInfo.rootPath + '/jobs',
                                "text": 'For Census 2021, we’ll be hiring at least 30,000 field staff across England and Wales.'
                            })
                        }}
                    </div>

                    <div class="grid__col col-4@m">
                        {{-
                            onsCard({
                                "ariaBy": 'Section highlight',
                                "id": 'title3',
                                "textId": 'text3',
                                "title": 'Keeping your data safe',
                                "url": pageInfo.rootPath + '/keeping-your-data-safe',
                                "text": 'How we keep your data safe and what happens to your personal information.'
                            })
                        }}
                    </div>

                </div>

            </section>

            <!-- Download resources and get involved -->
            <section class="u-pt-m u-bb u-pb-s">

                <div class="grid grid--column@xs@s u-mb-l">
                    
                    <div class="grid__col col-5@m">
                        
                        <h2 class="u-pr-m@m u-fs-xl u-mb-l">Get involved</h2>

                        <div class="u-pr-s@m">

                            {{
                                onsCard({
                                    "ariaBy": 'Section highlight',
                                    "id": 'title',
                                    "textId": 'text',
                                    "title": 'Local authorities',
                                    "url": pageInfo.rootPath + '/get-involved/local-authorities',
                                    "text": 'If you work for a local authority, find out how you can help support the census in your area.'
                                })
                            }}

                            {{
                                onsCard({
                                    "ariaBy": 'Section highlight',
                                    "id": 'title',
                                    "textId": 'text',
                                    "title": 'Community groups',
                                    "url": pageInfo.rootPath + '/get-involved/community-groups',
                                    "text": 'If you’re a community group leader, find out how you can help support the census in your community.'
                                })
                            }}

                            {{
                                onsCard({
                                    "ariaBy": 'Section highlight',
                                    "id": 'title',
                                    "textId": 'text',
                                    "title": 'Downloadable resources',
                                    "url": pageInfo.rootPath + '/get-involved/downloadable-resources',
                                    "text": 'If you work for a local authority or you’re a community group leader, choose from our full range of downloadable resources.'
                                })
                            }}

                        </div>

                    </div>

                    <div class="grid__col col-7@m u-bl@m u-pl-m@m">
                        
                        <h2 class="u-fs-xl u-mb-l">Featured downloadable resources</h2>

                        <div class="u-mb-m">
                            {{ onsDownloads({
                                "downloads": [
                                    {
                                        "thumbnail": {
                                            "smallSrc": pageInfo.rootPath + '/img/small/',
                                            "largeSrc": pageInfo.rootPath + '/img/large/',
                                            "filename": 'community-handbook-english.png',
                                            "alt": 'Community handbook english document thumbnail'
                                        },
                                        "url": pageInfo.rootPath + '/documents/Digital_Ready_CHDE1-2021_v4-0_280820.pdf',                                                
                                        "title": 'Community handbook',
                                        "type": 'Booklet',
                                        "meta": {
                                            "fileType": 'PDF',
                                            "fileSize": '6.6MB',
                                            "filePages": '16 pages'
                                        },
                                        "excerpt": 'Handbook for community leaders and representatives, introducing the census and how to help.'
                                    }
                                ]
                            }) }}
                        </div>

                        <div class="u-mb-m">
                            {{ onsDownloads({
                                "downloads": [
                                    {
                                        "thumbnail": {
                                            "smallSrc": pageInfo.rootPath + '/img/small/',
                                            "largeSrc": pageInfo.rootPath + '/img/large/',
                                            "filename": 'engagement-leaflet-english.png',
                                            "alt": 'Engagement leaflet english document thumbnail'
                                        },
                                        "url": pageInfo.rootPath + '/documents/Digital_Ready_ELA1-2021_v7-0_280820.pdf',                                                
                                        "title": 'Engagement leaflet',
                                        "type": 'Leaflet',
                                        "meta": {
                                            "fileType": 'PDF',
                                            "fileSize": '2.7MB',
                                            "filePages": '2 pages'
                                        },
                                        "excerpt": 'Leaflet for community leaders and representatives, introducing the census and asking for support.'
                                    }
                                ]
                            }) }}
                        </div>

                        <div class="u-mb-m">
                            {{ onsDownloads({
                                "downloads": [
                                    {
                                        "thumbnail": {
                                            "smallSrc": pageInfo.rootPath + '/img/small/',
                                            "largeSrc": pageInfo.rootPath + '/img/large/',
                                            "filename": 'councillor-handbook-english.png',
                                            "alt": 'Councillor handbook english document thumbnail'
                                        },
                                        "url": pageInfo.rootPath + '/documents/Digital_Ready_CHE1-2021_v4-0_280820.pdf',                                                
                                        "title": 'Councillor handbook',
                                        "type": 'Booklet',
                                        "meta": {
                                            "fileType": 'PDF',
                                            "fileSize": '6.9MB',
                                            "filePages": '20 pages'
                                        },
                                        "excerpt": 'Handbook for councillors, introducing the census and how to help.'
                                    }
                                ]
                            }) }}
                        </div>

                        <p class="u-mb-no"><a href="{{pageInfo.rootPath}}/get-involved/downloadable-resources">View all downloadable resources</a></p>

                    </div>
                    
                </div>

            </section>

            <!-- Contact and social links -->
            <section class="u-mb-l u-pt-m">

                <div class="grid grid--column@xs@s">

                    <div class="grid__col col-6@m">
                    
                        <h2>Get in touch</h2>

                        <p class="u-m-no">If you have any questions, <a href="{{ pageInfo.rootPath }}/contact-us">get in touch</a>.</p>

                    </div>

                    <div class="grid__col col-6@m">
                        
                        <h2>Follow us</h2>

                        {{
                            onsList({
                                "classes": 'list--bare list--inline',
                                "itemsList": [
                                    {
                                        "url": 'https://www.twitter.com/census2021',
                                        "text": 'Twitter',
                                        "prefixIcon": 'twitter',
                                        "iconSize": 'xxl',
                                        "rel": 'noreferrer external'
                                    },
                                    {
                                        "url": 'https://www.facebook.com/census2021',
                                        "text": 'Facebook',
                                        "prefixIcon": 'facebook',
                                        "iconSize": 'xxl',
                                        "rel": 'noreferrer external'
                                    },
                                    {
                                        "url": 'https://www.instagram.com/census2021',
                                        "text": 'Instagram',
                                        "prefixIcon": 'instagram',
                                        "iconSize": 'xxl',
                                        "rel": 'noreferrer external'
                                    }
                                ]
                            })
                        }}

                    </div>

                </div>

            </section>


        </div>

    
    {% endblock %}


{% endblock %}
