---
title: Web form
group: Census
version: 31.2.0
layout: census-website-engage/views/_rh-master
---

{% set form =  {
    "method": 'GET',
    "attributes": {
        "action": pageInfo.rootPath + '/web-form/thank-you'
    }
} %}

{% block main %}

    <div class="page__container container">

        {{ onsBreadcrumb({
            "ariaLabel": 'Breadcrumb',
            "itemsList": [
                {
                    "url": pageInfo.rootPath + '/',
                    "text": 'Home'
                }
            ]
        }) }}

        <div class="grid">

            <div class="grid__col col-9@m">

                <main class="page__main" id="main-content" role="main">

                    <h1 class="u-mb-l u-fs-xxl">Web form</h1>

                    {{ onsRadios({
                        "legend": 'Select your country',
                        "name": 'select-your-country',
                        "radios": [
                            {
                                "id": 'england',
                                "label": {
                                    "text": 'England'
                                },
                                "value": 'england'
                            },
                            {
                                "id": 'wales',
                                "label": {
                                    "text": 'Wales'
                                },
                                "value": 'wales'
                            },
                            {
                                "id": 'northern-ireland',
                                "label": {
                                    "text": 'Northern Ireland'
                                },
                                "value": 'northern-ireland'
                            }
                        ]
                    }) }}

                    {{ onsRadios({
                        "legend": 'What do you need help with?',
                        "name": 'what-do-you-need-help-with',
                        "radios": [
                            {
                                "id": 'dont-have-everythng',
                                "label": {
                                    "text": 'I don’t have everything I need to complete my census'
                                },
                                "value": 'I don’t have everything I need to complete my census'
                            },
                            {
                                "id": 'difficulties',
                                "label": {
                                    "text": 'I am having technical difficulties'
                                },
                                "value": 'I am having technical difficulties'
                            },
                            {
                                "id": 'census-form-help',
                                "label": {
                                    "text": 'I need help with my census form'
                                },
                                "value": 'I need help with my census form'
                            },
                            {
                                "id": 'complaint',
                                "label": {
                                    "text": 'I have a complaint'
                                },
                                "value": 'I have a complaint'
                            },
                            {
                                "id": 'address-help',
                                "label": {
                                    "text": 'I need help with my address'
                                },
                                "value": 'I need help with my address'
                            },
                            {
                                "id": 'something-else',
                                "label": {
                                    "text": 'Something else'
                                },
                                "value": 'Something else'
                            }
                        ]
                    }) }}

                    {{ onsTextarea({
                        "id": 'more-detail',
                        "name": 'more-detail',
                        "label": {
                            "text": 'Please provide more detail'
                        },
                        "rows": 6,
                        "maxlength": 400,
                        "charCountSingular": 'You have {x} character remaining',
                        "charCountPlural": 'You have {x} characters remaining'
                    }) }}

                    <h2 class="u-mt-m">Your contact details</h2>

                    {{ onsInput({
                        "classes": 'input--w-30',
                        "id": 'name',
                        "label": {
                            "text": 'Name'
                        }
                    }) }}

                    {{ onsInput({
                        "classes": 'input--w-30',
                        "id": 'email',
                        "type": 'email',
                        "autocomplete": 'email',
                        "label": {
                            "text": 'Email address',
                            "description": 'We will only use this to send you a reply'
                        }
                    }) }}

                    {{ onsButton({
                        "classes": 'u-mb-m u-mt-l',
                        "text": 'Send message'
                    }) }}

                    <p class="u-fs-s">Information about what we do with your personal data is available in our <a href="{{pageInfo.rootPath}}/privacy-and-data-protection">privacy and data protection statement</a>.</p>

                </main>

            </div>

        </div>

    </div>

{% endblock %}
