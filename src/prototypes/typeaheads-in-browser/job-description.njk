---
version: 5.0.1
layout: typeaheads-in-browser/views/_master
---
{% from "components/button/_macro.njk" import onsButton %}
{% from "components/textarea/_macro.njk" import onsTextarea %}

{% block main %}
    <a class="previous-link js-previous" href="{{ pageInfo.rootPath }}/job-title.html">Previous</a>
    <form action="{{ pageInfo.parentPath }}/work-address.html">
        <h1 class="u-fs-l u-mt-s">Can you briefly  describe what you do in your main job?</h1>
        {{
            onsTextarea({
                "id": "job-description",
                "name": "job-description",
                "classes": "input--w-30",
                "label": {
                    "text": "Job description"
                },
                "maxlength": 2000,
                "charCountSingular": "You have {x} character remaining",
                "charCountPlural": "You have {x} characters remaining"
            })
        }}
        {{
           onsButton({
                "text": "Save and continue",
                "classes": "u-mt-l"
            })
        }}
    </form>
{% endblock %}
