---
version: 5.0.1
layout: typeaheads-in-browser/views/_master
---
{% from "components/button/_macro.njk" import onsButton %}
{% from "components/radios/_macro.njk" import onsRadios %}

{% block main %}
    <a class="previous-link js-previous" href="{{ pageInfo.rootPath }}/ethnic-group.html">Previous</a>
    <form action="{{ pageInfo.parentPath }}/religion.html?previous={{ pageInfo.path }}.html">
        {{ 
            onsRadios({
                "legend": "<h1 class=\"u-fs-l\">Which one best describes your Black, African, Caribbean or Black British ethnic group or background?</h1>",
                "name": "ethnic-group-black",
                "classes": "u-mt-s",
                "radios": [
                    {
                        "id": "a",
                        "label": {
                            "text": "African"
                        },
                        "other": {
                            "id": "african",
                            "name": "african",
                            "label": {
                                "text": "Please specify your African background"
                            }
                        }
                    },
                    {
                        "id": "b",
                        "label": {
                            "text": "Caribbean"
                        }
                    },
                    {
                        "id": "other",
                        "label": {
                            "text": "Any other Black, African or Caribbean background",
                            "description": "You can enter this on the next question"
                        },
                        "attributes": {
                            "data-action-url": pageInfo.parentPath + "/ethnic-group-black-other.html"
                        }
                    }
                ]
            }) 
        }}
        {{
           onsButton({
                "text": "Save and continue",
                "classes": "u-mt-l"
            })
        }}
    </form>
{% endblock %}
